<Window x:Class="School_Management.UI.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="نظام إدارة المدرسة - لوحة تحكم الموظف"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border CornerRadius="15" 
            Background="#ECF4E8"
            BorderBrush="#ABE7B2" 
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- شريط العنوان -->
            <Border Grid.Row="0" 
                    Background="#CBF3BB"
                    CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- شعار واسم المستخدم -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="20,0,0,0"
                                VerticalAlignment="Center">
                        <Border Width="40" 
                                Height="40" 
                                CornerRadius="20"
                                Background="#CBF3BB">
                            <TextBlock Text="👨‍💼" 
                                     FontSize="20"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock x:Name="EmployeeNameText" 
                                     Text="موظف إداري" 
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock x:Name="EmployeeRoleText" 
                                     Text="موظف" 
                                     FontSize="12"
                                     Foreground="#ECF4E8"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- عنوان الصفحة -->
                    <TextBlock x:Name="PageTitle" 
                             Grid.Column="1" 
                             Text="لوحة تحكم الموظف" 
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              Margin="0,0,20,0"
                              VerticalAlignment="Center">
                        <Button x:Name="MinimizeButton"
                              Content="─" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand"
                              Click="MinimizeButton_Click"
                              Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2C3E2F"/>
                                            <Setter Property="Foreground" Value="#CBF3BB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="CloseButton"
                              Content="✕" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="#2C3E2F"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand"
                              Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2C3E2F"/>
                                            <Setter Property="Foreground" Value="#F44336"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- محتوى رئيسي -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- القائمة الجانبية -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- زر الرئيسية -->
                            <Button x:Name="HomeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Click="HomeButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" 
                                             FontSize="20"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="الرئيسية" 
                                             FontSize="16"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم الإدارة الأكاديمية -->
                            <TextBlock Text="الإدارة الأكاديمية" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddStudentButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddStudent" 
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة طالب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AddClassGroupButton"
                               Style="{StaticResource SidebarButtonStyle}"
                               Tag="AssignGourpToClass" 
                               Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏫👥" 
                                        FontSize="16"
                                        Margin="0,0,10,0"/>
                                                           <TextBlock Text="إضافة صف كامل" 
                                        FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AssignStudentToClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AssignStudentToClass"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏫➕👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة طالب إلى صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>
                             
                            <Button x:Name="AssignTeacherToClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AssignTeacherToClass"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="↪️👨‍🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة مدرس إلى صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="AssignSubjectsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AssignSubjects"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📚🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إعطاء مواد للطالب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم العروض والمشاهدات -->
                            <TextBlock Text="العروض والمشاهدات" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="ViewAllClassesButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllClasses"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏫📋" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الصفوف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewClassesByGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewClassesByGroup"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض الصفوف حسب الشعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllTeachersButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllTeachers"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🏫📋" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع المدرسين" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllStudentsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllStudents"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🎓📋" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الطلاب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="SearchStudentButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="SearchStudent"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🔍👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="بحث عن طالب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewStudentsByClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewStudentsByClass"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📊👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض الطلاب حسب الصف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم التقارير -->
                            <TextBlock Text="التقارير والإحصائيات" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="ReportsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="Reports"
                                  Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📈📊" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="التقارير الإحصائية" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- زر الخروج -->
                            <Button x:Name="LogoutButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Margin="0,40,0,0"
                                  Background="#FFEBEE"
                                  BorderBrush="#F44336"
                                  Click="LogoutButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🚪" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تسجيل الخروج" 
                                             FontSize="14"
                                             Foreground="#F44336"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- منطقة المحتوى -->
                <Border Grid.Column="1" 
                        Background="#ECF4E8"
                        CornerRadius="0,0,15,0">
                    <!-- استخدام Frame للتنقل بين الواجهات -->
                    <Frame x:Name="MainFrame"
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"
                           BorderThickness="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>