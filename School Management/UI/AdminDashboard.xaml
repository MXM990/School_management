<Window x:Class="School_Management.UI.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="نظام إدارة المدرسة - لوحة تحكم المدير"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- نافذة رئيسية -->
    <Border CornerRadius="15" 
            Background="#ECF4E8"
            BorderBrush="#CBF3BB" 
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- شريط العنوان -->
            <Border Grid.Row="0" 
                    Background="#93BFC7"
                    CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- شعار واسم المستخدم -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="20,0,0,0"
                                VerticalAlignment="Center">
                        <Border Width="40" 
                                Height="40" 
                                CornerRadius="20"
                                Background="#CBF3BB">
                            <TextBlock Text="👨‍💼" 
                                     FontSize="20"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="أحمد محمد" 
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="المدير العام" 
                                     FontSize="12"
                                     Foreground="#ECF4E8"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- عنوان الصفحة -->
                    <TextBlock Grid.Column="1" 
                             Text="لوحة تحكم المدير" 
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              Margin="0,0,20,0"
                              VerticalAlignment="Center">
                        <Button x:Name="MinimizeButton"
                              Content="─" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand"
                              Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#93BFC7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="CloseButton"
                              Content="✕" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#F44336"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- محتوى رئيسي -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- القائمة الجانبية -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- زر الرئيسية -->
                            <Button x:Name="HomeButton"
                                  Style="{StaticResource SidebarButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" 
                                             FontSize="20"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="الرئيسية" 
                                             FontSize="16"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم إدارة الموظفين -->
                            <TextBlock Text="إدارة الموظفين" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddEmployeeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddEmployee">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة موظف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="EditEmployeeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="EditEmployee">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تعديل موظف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="DeleteEmployeeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteEmployee">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف موظف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllEmployeesButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllEmployees">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الموظفين" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم إدارة المدرسين -->
                            <TextBlock Text="إدارة المدرسين" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddTeacherButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddTeacher">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة مدرس" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="EditTeacherButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="EditTeacher">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تعديل مدرس" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="DeleteTeacherButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteTeacher">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف مدرس" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllTeachersButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllTeachers">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع المدرسين" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم إدارة الصفوف -->
                            <TextBlock Text="إدارة الصفوف" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddClass">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="EditClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="EditClass">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تعديل صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="DeleteClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteClass">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllClassesButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllClasses">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الصفوف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم إدارة الشعب -->
                            <TextBlock Text="إدارة الشعب" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddGroup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة شعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="EditGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="EditGroup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تعديل شعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="DeleteGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteGroup">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف شعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllGroupsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllGroups">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الشعب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- قسم إدارة الطلاب -->
                            <TextBlock Text="إدارة الطلاب" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="ViewAllStudentsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllStudents">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الطلاب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <!-- زر الخروج -->
                            <Button x:Name="LogoutButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Margin="0,40,0,0"
                                  Background="#FFEBEE"
                                  BorderBrush="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🚪" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تسجيل الخروج" 
                                             FontSize="14"
                                             Foreground="#F44336"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- منطقة المحتوى -->
                <Border Grid.Column="1" 
                        Background="#ECF4E8"
                        CornerRadius="0,0,15,0">
                    <Grid>
                        <!-- شاشة الترحيب (الافتراضية) -->
                        <Border x:Name="WelcomeContent"
                              Background="White"
                              CornerRadius="10"
                              Margin="20"
                              Visibility="Visible">
                            <StackPanel HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <Viewbox Width="150" Height="150" 
                                       Margin="0,0,0,30">
                                    <Grid>
                                        <Ellipse Width="150" Height="150" 
                                               Fill="#ECF4E8"/>
                                        <Path Data="M30,40 L70,40 L70,80 L30,80 Z" 
                                            Stroke="#93BFC7" 
                                            StrokeThickness="2"
                                            Fill="#CBF3BB"/>
                                        <Path Data="M40,50 L60,50 L60,70 L40,70 Z" 
                                            Stroke="#5A6D5E" 
                                            StrokeThickness="1"
                                            Fill="#ABE7B2"/>
                                    </Grid>
                                </Viewbox>

                                <TextBlock Text="مرحباً بك في لوحة تحكم المدير" 
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="#2C3E2F"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,15"/>

                                <TextBlock Text="يمكنك إدارة جميع جوانب النظام من خلال القائمة الجانبية" 
                                         FontSize="16"
                                         Foreground="#5A6D5E"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,30"/>

                                <WrapPanel HorizontalAlignment="Center">
                                    <Border Width="150" Height="150"
                                          Background="#CBF3BB"
                                          CornerRadius="10"
                                          Margin="10">
                                        <StackPanel HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center">
                                            <TextBlock Text="👥" 
                                                     FontSize="30"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="الموظفين" 
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="#2C3E2F"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="150" Height="150"
                                          Background="#ABE7B2"
                                          CornerRadius="10"
                                          Margin="10">
                                        <StackPanel HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center">
                                            <TextBlock Text="👨‍🏫" 
                                                     FontSize="30"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="المدرسين" 
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="#2C3E2F"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Width="150" Height="150"
                                          Background="#93BFC7"
                                          CornerRadius="10"
                                          Margin="10">
                                        <StackPanel HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center">
                                            <TextBlock Text="🏫" 
                                                     FontSize="30"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="الصفوف" 
                                                     FontSize="16"
                                                     FontWeight="Bold"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- باقي المحتويات (سيتم التحكم بها من الكود الخلفي) -->
                        <ContentControl x:Name="MainContent" 
                                      Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>