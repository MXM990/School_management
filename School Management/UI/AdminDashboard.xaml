<Window x:Class="School_Management.UI.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="نظام إدارة المدرسة - لوحة تحكم المدير"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border CornerRadius="15" 
            Background="#ECF4E8"
            BorderBrush="#CBF3BB" 
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#93BFC7"
                    CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                Margin="20,0,0,0"
                                VerticalAlignment="Center">
                        <Border Width="40" 
                                Height="40" 
                                CornerRadius="20"
                                Background="#CBF3BB">
                            <TextBlock Text="👨‍💼" 
                                     FontSize="20"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="أحمد محمد" 
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="White"/>
                            <TextBlock Text="المدير العام" 
                                     FontSize="12"
                                     Foreground="#ECF4E8"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock x:Name="PageTitle" 
                             Grid.Column="1" 
                             Text="لوحة تحكم المدير" 
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              Margin="0,0,20,0"
                              VerticalAlignment="Center">
                        <Button x:Name="MinimizeButton"
                              Content="─" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand"
                              Click="MinimizeButton_Click"
                              Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#93BFC7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="CloseButton"
                              Content="✕" 
                              Width="30" Height="30"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              Cursor="Hand"
                              Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent"
                                                        CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#F44336"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- محتوى رئيسي -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <Button x:Name="HomeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Click="HomeButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏠" 
                                             FontSize="20"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="الرئيسية" 
                                             FontSize="16"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="إدارة الموظفين" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddEmployeeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddEmployee" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة موظف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                           
                            <Button x:Name="DeleteEmployeeButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteEmployee" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف موظف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllEmployeesButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllEmployees" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الموظفين" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="إدارة المدرسين" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddTeacherButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddTeacher" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة مدرس" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                          
                            <Button x:Name="DeleteTeacherButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteTeacher" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف مدرس" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllTeachersButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllTeachers" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع المدرسين" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="إدارة الصفوف" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddClass" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            

                            <Button x:Name="DeleteClassButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteClass" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف صف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllClassesButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllClasses" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏫" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الصفوف" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="إدارة الشعب" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="AddGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="AddGroup" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="إضافة شعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                          
                            <Button x:Name="DeleteGroupButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="DeleteGroup" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🗑️" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="حذف شعبة" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="ViewAllGroupsButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllGroups" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👥" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الشعب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="إدارة الطلاب" 
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#93BFC7"
                                     Margin="10,20,10,5"/>

                            <Button x:Name="ViewAllStudentsButtonadmin"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Tag="ViewAllStudents" Click="SidebarButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👨‍🎓" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="عرض جميع الطلاب" 
                                             FontSize="14"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="LogoutButton"
                                  Style="{StaticResource SidebarButtonStyle}"
                                  Margin="0,40,0,0"
                                  Background="#FFEBEE"
                                  BorderBrush="#F44336"
                                  Click="LogoutButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🚪" 
                                             FontSize="16"
                                             Margin="0,0,10,0"/>
                                    <TextBlock Text="تسجيل الخروج" 
                                             FontSize="14"
                                             Foreground="#F44336"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border Grid.Column="1" 
                        Background="#ECF4E8"
                        CornerRadius="0,0,15,0">
                    <Frame x:Name="MainFrame"
                           NavigationUIVisibility="Hidden"
                           Background="Transparent"
                           BorderThickness="0"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>