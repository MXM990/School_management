<UserControl x:Class="School_Management.UI.EmpPages.ViewTeachersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#FF9800" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍🏫📋" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="عرض جميع المعلمين" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قائمة جميع المعلمين المسجلين في النظام" 
                             FontSize="14" Foreground="#FFF3E0"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- مربع البحث -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 بحث" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="SearchTextBox_TextChanged"
                               ToolTip="ابحث حسب اسم المعلم أو التخصص أو الرقم الوطني"/>
                    </StackPanel>

                    <!-- تصفية حسب التخصص -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="📚 تصفية حسب التخصص" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="SpecializationFilterComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                Width="180"
                                SelectionChanged="SpecializationFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="جميع التخصصات"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <Button x:Name="RefreshButton"
                              Content="🔄 تحديث"
                              Width="120"
                              Height="35"
                              Background="#FFF3E0"
                              BorderBrush="#FF9800"
                              Click="RefreshButton_Click"
                              Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- جدول المعلمين -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رأس الجدول -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="اسم المعلم" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="الرقم الوطني" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="العمر" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="4" Text="رقم الهاتف" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="5" Text="سنوات الخبرة" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="6" Text="التخصص" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="7" Text="تاريخ التعيين" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="8" Text="إجراءات" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <!-- قائمة المعلمين -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="TeachersListPanel">
                            <!-- سيتم إضافة المعلمين هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- إحصائيات -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="👨‍🏫" FontSize="20"/>
                                <TextBlock Text="إجمالي المعلمين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="TotalTeachersText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="20"/>
                                <TextBlock Text="متوسط الخبرة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="AvgExperienceText" 
                                         Text="0 سنة" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#FF9800"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="🏆" FontSize="20"/>
                                <TextBlock Text="أكثر خبرة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="MaxExperienceText" 
                                         Text="0 سنة" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="📚" FontSize="20"/>
                                <TextBlock Text="تخصصات مختلفة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SpecializationsCountText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2196F3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                                <TextBlock Text="⚡" FontSize="20"/>
                                <TextBlock Text="متوسط العمر" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="AvgAgeText" 
                                         Text="0 سنة" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#9C27B0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>