<UserControl x:Class="School_Management.UI.EmpPages.ViewAllStudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍🎓📋" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="عرض جميع الطلاب" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قائمة جميع الطلاب المسجلين في النظام" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- مربع البحث -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 بحث" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="SearchTextBox_TextChanged"
                             />
                    </StackPanel>

                    <!-- أزرار التصفية -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="📊 تصفية حسب الحالة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusFilterComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                Width="150"
                                SelectionChanged="StatusFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="جميع الحالات"/>
                            <ComboBoxItem Content="مسجل"/>
                            <ComboBoxItem Content="منتظم"/>
                            <ComboBoxItem Content="منقطع"/>
                            <ComboBoxItem Content="ملغى"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <Button x:Name="RefreshButton"
                              Content="🔄 تحديث"
                              Width="120"
                              Height="35"
                              Background="#E8F5E9"
                              BorderBrush="#4CAF50"
                              Click="RefreshButton_Click"
                              Margin="0,0,0,5"/>
                        <Button x:Name="ExportButton"
                              Content="📥 تصدير Excel"
                              Width="120"
                              Height="35"
                              Background="#E3F2FD"
                              BorderBrush="#2196F3"
                              Click="ExportButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- جدول الطلاب -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رأس الجدول -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="اسم الطالب" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="الرقم الوطني" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="العمر" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="4" Text="حالة التسجيل" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="5" Text="التسجيل" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="6" Text="إجراءات" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <!-- قائمة الطلاب -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="StudentsListPanel">
                            <!-- سيتم إضافة الطلاب هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- إحصائيات -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="👨‍🎓" FontSize="20"/>
                                <TextBlock Text="إجمالي الطلاب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="TotalStudentsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="✅" FontSize="20"/>
                                <TextBlock Text="مسجلين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="RegisteredStudentsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="20"/>
                                <TextBlock Text="منتظمين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="ActiveStudentsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2196F3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="⏸️" FontSize="20"/>
                                <TextBlock Text="منقطعين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="InactiveStudentsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#FF9800"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>