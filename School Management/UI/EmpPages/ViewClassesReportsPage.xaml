<UserControl x:Class="School_Management.UI.EmpPages.ViewClassesReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#6EC1E4" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📊📋" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="تقرير الصفوف الدراسية" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="عرض جميع الصفوف المسجلة في النظام" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- مربع البحث -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 بحث" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="SearchTextBox_TextChanged"
                               ToolTip="ابحث حسب مستوى التعليم أو المعلومات الإضافية"/>
                    </StackPanel>

                 
                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <Button x:Name="RefreshButton"
                              Content="🔄 تحديث"
                              Width="120"
                              Height="35"
                              Background="#E8F5E9"
                              BorderBrush="#4CAF50"
                              Click="RefreshButton_Click"
                              Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- جدول الصفوف -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رأس الجدول -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="مستوى التعليم" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="المعلومات الإضافية" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="تاريخ الإنشاء" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="5" Text="إجراءات" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <!-- قائمة الصفوف -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="ClassesListPanel">
                            <!-- سيتم إضافة الصفوف هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- إحصائيات -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="📚" FontSize="20"/>
                                <TextBlock Text="إجمالي الصفوف" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="TotalClassesText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>