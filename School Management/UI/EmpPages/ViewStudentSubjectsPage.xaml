<UserControl x:Class="School_Management.UI.EmpPages.ViewStudentSubjectsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#673AB7" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📚👨‍🎓" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="المواد المسجلة للطلاب" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="عرض المواد الدراسية المسجلة لكل طالب" 
                             FontSize="14" Foreground="#EDE7F6"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- بحث باسم الطالب -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 بحث باسم الطالب" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="StudentNameTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Width="300"
                                   TextChanged="StudentNameTextBox_TextChanged"
                                   ToolTip="أدخل اسم الطالب للبحث عن المواد المسجلة له"/>
                            <Button x:Name="SearchButton"
                                  Content="بحث"
                                  Width="80"
                                  Height="35"
                                  Background="#673AB7"
                                  Foreground="White"
                                  FontWeight="Bold"
                                  Margin="10,0,0,0"
                                  Click="SearchButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- اقتراحات أسماء الطلاب -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="👨‍🎓 اقتراحات أسماء الطلاب" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="StudentsComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                Width="200"
                                SelectionChanged="StudentsComboBox_SelectionChanged">
                            <ComboBoxItem Content="اختر طالب..."/>
                        </ComboBox>
                    </StackPanel>

                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                 Margin="0,0,0,5"/>
                        <Button x:Name="RefreshButton"
                              Content="🔄 تحديث الكل"
                              Width="120"
                              Height="35"
                              Background="#E8F5E9"
                              BorderBrush="#4CAF50"
                              Click="RefreshButton_Click"
                              Margin="0,0,0,5"/>
                        <Button x:Name="ShowAllButton"
                              Content="📋 عرض الكل"
                              Width="120"
                              Height="35"
                              Background="#E3F2FD"
                              BorderBrush="#2196F3"
                              Click="ShowAllButton_Click"
                              Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- معلومات الطالب المحدد -->
            <Border x:Name="StudentInfoBorder"
                    Background="#F3E5F5" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="👨‍🎓" FontSize="40" Foreground="#673AB7"/>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock x:Name="SelectedStudentNameText"
                                 Text="اسم الطالب"
                                 FontSize="18" FontWeight="Bold"
                                 Foreground="#2C3E2F"/>
                        <TextBlock x:Name="SubjectsCountText"
                                 Text="0 مادة مسجلة"
                                 FontSize="14"
                                 Foreground="#5A6D5E"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="2"
                          Content="🗑️ إزالة التحديد"
                          Width="120"
                          Height="35"
                          Background="#FFEBEE"
                          BorderBrush="#F44336"
                          Click="ClearSelectionButton_Click"/>
                </Grid>
            </Border>

            <!-- جدول المواد -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رأس الجدول -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="اسم الطالب" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="اسم المادة" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="إجراءات" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <!-- قائمة المواد -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SubjectsListPanel">
                            <!-- سيتم إضافة المواد هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- إحصائيات -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="📚" FontSize="20"/>
                                <TextBlock Text="إجمالي التسجيلات" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="TotalRegistrationsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="👨‍🎓" FontSize="20"/>
                                <TextBlock Text="عدد الطلاب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="StudentsCountText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#673AB7"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="📖" FontSize="20"/>
                                <TextBlock Text="عدد المواد" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SubjectsCountText2" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="20"/>
                                <TextBlock Text="متوسط المواد لكل طالب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="AvgSubjectsPerStudentText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#FF9800"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>