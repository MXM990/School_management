<UserControl x:Class="School_Management.UI.EmpPages.AddStudentPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍🎓" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="إضافة طالب جديد" 
                                     FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="املأ النموذج التالي لإضافة طالب جديد إلى النظام" 
                                 FontSize="14" Foreground="#ECF4E8"
                                 HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج الإضافة -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <!-- اسم الطالب -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الطالب" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="StudentNameTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   TextChanged="TextBox_TextChanged"/>

                        <TextBlock x:Name="StudentNameErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- الرقم الوطني -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🆔" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الرقم الوطني" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="NationalNumberTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   MaxLength="14"
                                   PreviewTextInput="NationalNumberTextBox_PreviewTextInput"
                                   TextChanged="TextBox_TextChanged"/>

                        <TextBlock x:Name="NationalNumberErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- العمر -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🎂" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العمر" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="AgeTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   MaxLength="2"
                                   PreviewTextInput="AgeTextBox_PreviewTextInput"
                                   TextChanged="AgeTextBox_TextChanged"/>

                        <TextBlock x:Name="AgeErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- اسم الأب -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👨" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الأب" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="FatherNameTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   TextChanged="TextBox_TextChanged"/>

                        <TextBlock x:Name="FatherNameErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- رقم الهاتف -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📱" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                      Background="#ECF4E8"
                                      CornerRadius="5,0,0,5"
                                      BorderBrush="#D1D1D1"
                                      BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                             FontSize="14"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Padding="10"/>
                            </Border>

                            <TextBox x:Name="PhoneNumberTextBox"
                                       Grid.Column="1"
                                       Style="{StaticResource RoundedTextBoxStyle}"
                                       Margin="-1,0,0,0"
                                       BorderThickness="0,1,1,1"
                                       MaxLength="10"
                                       PreviewTextInput="PhoneNumberTextBox_PreviewTextInput"
                                       TextChanged="TextBox_TextChanged"/>
                        </Grid>

                        <TextBlock x:Name="PhoneNumberErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- حالة التسجيل -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📝" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="حالة التسجيل" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="RegistrationStatusComboBox"
                                    Style="{StaticResource RoundedComboBoxStyle}"
                                    SelectionChanged="RegistrationStatusComboBox_SelectionChanged">
                            <ComboBoxItem Content="مسجل"/>
                            <ComboBoxItem Content="منتظم"/>
                            <ComboBoxItem Content="منقطع"/>
                            <ComboBoxItem Content="ملغى"/>
                        </ComboBox>

                        <TextBlock x:Name="RegistrationStatusErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- العنوان -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🏠" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العنوان" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <TextBox x:Name="AddressTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Height="60"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- البريد الإلكتروني -->
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📧" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="البريد الإلكتروني" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <TextBox x:Name="EmailTextBox"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   TextChanged="EmailTextBox_TextChanged"/>

                        <TextBlock x:Name="EmailErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- تاريخ الميلاد -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📅" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="تاريخ الميلاد" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <DatePicker x:Name="BirthDatePicker"
                                    Style="{StaticResource BasicDatePickerStyle}"
                                      SelectedDateChanged="BirthDatePicker_SelectedDateChanged"/>

                        <TextBlock x:Name="BirthDateErrorText" 
                                     Foreground="#F44336" 
                                     FontSize="12"
                                     Margin="5,5,0,0"
                                     Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                                x:Name="FormStatusBorder"
                                Background="#FFF3E0" 
                                CornerRadius="5" 
                                Padding="15" 
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                             FontSize="14"
                                             Foreground="#FF9800"
                                             TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                                  Content="💾 حفظ الطالب"
                                  Width="200"
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Margin="0,0,15,0"
                                  Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                                  Content="🧹 مسح النموذج"
                                  Width="180"
                                  Background="#ABE7B2"
                                  BorderBrush="#93C9A8"
                                  Margin="0,0,15,0"
                                  Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                                  Content="❌ إلغاء"
                                  Width="150"
                                  Background="#FFEBEE"
                                  BorderBrush="#F44336"
                                  Foreground="#F44336"
                                  Click="CancelButton_Click"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                                BorderThickness="0,1,0,0"
                                BorderBrush="#E0E0E0"
                                Margin="0,30,0,0"
                                Padding="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                         Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الرقم الوطني يجب أن يكون 14 رقماً ولا يمكن تكراره" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يجب أن يكون عمر الطالب بين 6 و 18 سنة" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="سيتم حفظ بيانات الطالب في قاعدة البيانات فور الضغط على زر الحفظ" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>