<UserControl x:Class="School_Management.UI.EmpPages.AssignStudentToClassPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="↪️🏫" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="إضافة طالب إلى صف/شعبة" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="اختر طالباً ثم الصف والشعبة المناسبة لتسجيله" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج التسجيل -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- اختيار الطالب -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👨‍🎓" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اختر الطالب" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="StudentsComboBox"
                                    Grid.Column="0"
                                    Style="{StaticResource RoundedComboBoxStyle}"
                                    DisplayMemberPath="DisplayText"
                                    SelectionChanged="StudentsComboBox_SelectionChanged"/>

                            <Button x:Name="RefreshStudentsButton"
                                  Grid.Column="1"
                                  Content="🔄 تحديث"
                                  Width="100"
                                  Height="35"
                                  Background="#E8F5E9"
                                  BorderBrush="#4CAF50"
                                  Margin="10,0,0,0"
                                  Click="RefreshStudentsButton_Click"/>
                        </Grid>

                        <TextBlock x:Name="StudentInfoText"
                                 FontSize="12"
                                 Foreground="#5A6D5E"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>

                        <TextBlock x:Name="StudentErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- اختيار الصف والشعبة -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🏫👥" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اختر الصف والشعبة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="ClassGroupComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                DisplayMemberPath="DisplayText"
                                SelectionChanged="ClassGroupComboBox_SelectionChanged"/>

                        <TextBlock x:Name="ClassGroupInfoText"
                                 FontSize="12"
                                 Foreground="#5A6D5E"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>

                        <TextBlock x:Name="ClassGroupErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- معلومات الصف والشعبة المحددة -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed"
                            x:Name="ClassGroupDetailsBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="🏫" FontSize="20"/>
                                <TextBlock Text="الصف الدراسي" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="ClassNameText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="👥" FontSize="20"/>
                                <TextBlock Text="الشعبة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="GroupNameText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="👨‍🎓" FontSize="20"/>
                                <TextBlock Text="الطلاب المسجلين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="CurrentStudentsText"
                                         Text="0" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2196F3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="20"/>
                                <TextBlock Text="السعة القصوى" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="MaxStudentsText"
                                         Text="0" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- معلومات الطالب المحدد -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed"
                            x:Name="StudentDetailsBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="👤" FontSize="20"/>
                                <TextBlock Text="اسم الطالب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SelectedStudentNameText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="🆔" FontSize="20"/>
                                <TextBlock Text="الرقم الوطني" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SelectedNationalNumberText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="🎂" FontSize="20"/>
                                <TextBlock Text="العمر" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SelectedAgeText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#2196F3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="📝" FontSize="20"/>
                                <TextBlock Text="الحالة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="SelectedStatusText"
                                         Text="-" 
                                         FontSize="16" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                         FontSize="14"
                                         Foreground="#FF9800"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                              Content="💾 تسجيل الطالب"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"
                              Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                              Content="🧹 مسح النموذج"
                              Width="180"
                              Background="#ABE7B2"
                              BorderBrush="#93C9A8"
                              Margin="0,0,15,0"
                              Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Background="#FFEBEE"
                              BorderBrush="#F44336"
                              Foreground="#F44336"
                              Click="CancelButton_Click"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0"
                            Padding="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يجب اختيار طالب ثم الصف والشعبة المناسبة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يجب التأكد من أن الصف/الشعبة لم يصل للعدد الأقصى للطلاب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="لا يمكن تسجيل الطالب في نفس الصف/الشعبة مرتين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يمكن للطالب الانتقال بين الشعب خلال نفس السنة الدراسية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>