<UserControl x:Class="School_Management.UI.EmpPages.AddClassGroupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🏫👥" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="إضافة صف كامل" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="ربط صف مع شعبة لتكوين صف دراسي كامل" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج الإضافة -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- اختيار الصف -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🏫" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اختر الصف" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="ClassComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                DisplayMemberPath="EducationLevel"
                                SelectionChanged="ClassComboBox_SelectionChanged"/>

                        <TextBlock x:Name="ClassErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- اختيار الشعبة -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👥" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اختر الشعبة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="GroupComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                DisplayMemberPath="GroupName"
                                SelectionChanged="GroupComboBox_SelectionChanged"/>

                        <TextBlock x:Name="GroupErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- اسم الصف الكامل -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📝" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الصف الكامل" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="FullClassNameTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="FullClassNameTextBox_TextChanged"
                              />

                        <TextBlock x:Name="FullClassNameErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>

                        <TextBlock Text="سيتم اقتراح اسم تلقائياً بعد اختيار الصف والشعبة" 
                                 FontSize="11"
                                 Foreground="#6C757D"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- العدد الأقصى للطلاب -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👨‍🎓" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العدد الأقصى للطلاب" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="MaxStudentsSlider"
                                  Grid.Column="0"
                                  Minimum="1" 
                                  Maximum="50" 
                                  Value="25"
                                  TickFrequency="1"
                                  IsSnapToTickEnabled="True"
                                  TickPlacement="BottomRight"
                                  Margin="0,0,10,0"
                                  ValueChanged="MaxStudentsSlider_ValueChanged"/>

                            <Border Grid.Column="1"
                                  Background="#ECF4E8"
                                  CornerRadius="5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="MaxStudentsValueText"
                                             Text="25"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             Foreground="#2C3E2F"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                             Text="طالب"
                                             FontSize="14"
                                             Foreground="#5A6D5E"
                                             Margin="5,0,0,0"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <TextBlock Text="يمكنك تحديد العدد بين 1 و 50 طالب" 
                                 FontSize="11"
                                 Foreground="#6C757D"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- معلومات التلخيص -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            x:Name="SummaryBorder"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="📊 ملخص الصف الكامل" 
                                     FontSize="16" FontWeight="Bold" 
                                     Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="الصف المختار:" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                                    <TextBlock x:Name="SummaryClassName"
                                             Text="-" 
                                             FontSize="14" FontWeight="Bold"
                                             Foreground="#2C3E2F"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="الشعبة المختارة:" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                                    <TextBlock x:Name="SummaryGroupName"
                                             Text="-" 
                                             FontSize="14" FontWeight="Bold"
                                             Foreground="#2C3E2F"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="الاسم الكامل:" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                                    <TextBlock x:Name="SummaryFullName"
                                             Text="-" 
                                             FontSize="14" FontWeight="Bold"
                                             Foreground="#2C3E2F"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="السعة:" 
                                             FontSize="12" Foreground="#5A6D5E"/>
                                    <TextBlock x:Name="SummaryMaxStudents"
                                             Text="-" 
                                             FontSize="14" FontWeight="Bold"
                                             Foreground="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                         FontSize="14"
                                         Foreground="#FF9800"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                              Content="💾 حفظ الصف الكامل"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"
                              Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                              Content="🧹 مسح النموذج"
                              Width="180"
                              Background="#ABE7B2"
                              BorderBrush="#93C9A8"
                              Margin="0,0,15,0"
                              Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Background="#FFEBEE"
                              BorderBrush="#F44336"
                              Foreground="#F44336"
                              Click="CancelButton_Click"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0"
                            Padding="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="لا يمكن ربط نفس الصف مع نفس الشعبة مرتين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="العدد الأقصى يحدد سعة الصف الدراسي عند إضافة الطلاب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="اسم الصف الكامل سيكون المعرف الرئيسي في النظام" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>