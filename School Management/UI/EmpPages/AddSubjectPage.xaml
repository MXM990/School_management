<UserControl x:Class="School_Management.UI.Pages.AddSubjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#2196F3" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📚" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="إضافة مادة جديدة" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="املأ النموذج التالي لإضافة مادة جديدة إلى النظام" 
                             FontSize="14" Foreground="#E3F2FD"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج الإضافة -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- رسالة GUID -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔒" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="سيتم إنشاء رقم تعريف فريد (GUID) تلقائياً عند حفظ البيانات" 
                                     FontSize="12" Foreground="#6C757D"/>
                        </StackPanel>
                    </Border>

                    <!-- اسم المادة -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📖" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم المادة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="SubjectNameTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="SubjectNameTextBox_TextChanged"/>

                        <TextBlock x:Name="SubjectNameErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- الصف الدراسي -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🏫" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الصف الدراسي" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="ClassComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                SelectedValuePath="ClassID"
                                TextSearch.TextPath="ClassName"
                                SelectionChanged="ClassComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📁" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding ClassName}"/>
                                        <TextBlock Text=" (" Foreground="Gray"/>
                                        <TextBlock Text="{Binding EducationLevel}" Foreground="Gray"/>
                                        <TextBlock Text=")" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock x:Name="ClassErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                  
                    <!-- حالة النموذج -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                         FontSize="14"
                                         Foreground="#FF9800"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                              Content="💾 حفظ المادة"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"
                              Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                              Content="🧹 مسح النموذج"
                              Width="180"
                              Background="#ABE7B2"
                              BorderBrush="#93C9A8"
                              Margin="0,0,15,0"
                              Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Background="#FFEBEE"
                              BorderBrush="#F44336"
                              Foreground="#F44336"
                              Click="CancelButton_Click"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0"
                            Padding="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="اسم المادة يجب أن يكون فريداً ولا يمكن تكراره" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="سيتم حفظ بيانات المادة في قاعدة البيانات فور الضغط على زر الحفظ" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>