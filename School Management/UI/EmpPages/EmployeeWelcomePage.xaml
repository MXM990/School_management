<UserControl x:Class="School_Management.UI.EmpPages.EmployeeWelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍💼" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="مرحباً بك في لوحة تحكم الموظف" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                    <TextBlock Text="يمكنك إدارة العمليات الأكاديمية من خلال القائمة الجانبية" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- بطاقات الوظائف السريعة -->
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                <!-- بطاقة إضافة طالب -->
                <Border Width="250" Height="250" 
                        Background="White" 
                        CornerRadius="10"
                        Margin="10">
                    <Button x:Name="QuickAddStudentBtn" 
                            Style="{StaticResource CardButtonStyle}"
                            Click="QuickAddStudentBtn_Click">
                        <StackPanel>
                            <TextBlock Text="➕👨‍🎓" 
                                     FontSize="40"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="إضافة طالب" 
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#2C3E2F"
                                     HorizontalAlignment="Center"
                                     Margin="0,10,0,5"/>
                            <TextBlock Text="إضافة طالب جديد إلى النظام" 
                                     FontSize="12"
                                     Foreground="#5A6D5E"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Width="200"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- بطاقة عرض الطلاب -->
                <Border Width="250" Height="250" 
                        Background="White" 
                        CornerRadius="10"
                        Margin="10">
                    <Button x:Name="QuickViewStudentsBtn" 
                            Style="{StaticResource CardButtonStyle}"
                            Click="QuickViewStudentsBtn_Click">
                        <StackPanel>
                            <TextBlock Text="👨‍🎓📋" 
                                     FontSize="40"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="عرض الطلاب" 
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#2C3E2F"
                                     HorizontalAlignment="Center"
                                     Margin="0,10,0,5"/>
                            <TextBlock Text="عرض قائمة جميع الطلاب" 
                                     FontSize="12"
                                     Foreground="#5A6D5E"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Width="200"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- بطاقة توزيع الطلاب -->
                <Border Width="250" Height="250" 
                        Background="White" 
                        CornerRadius="10"
                        Margin="10">
                    <Button x:Name="QuickAssignStudentsBtn" 
                            Style="{StaticResource CardButtonStyle}"
                            Click="QuickAssignStudentsBtn_Click">
                        <StackPanel>
                            <TextBlock Text="↪️🏫" 
                                     FontSize="40"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="توزيع الطلاب" 
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#2C3E2F"
                                     HorizontalAlignment="Center"
                                     Margin="0,10,0,5"/>
                            <TextBlock Text="توزيع الطلاب على الصفوف والشعب" 
                                     FontSize="12"
                                     Foreground="#5A6D5E"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Width="200"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- بطاقة التقارير -->
                <Border Width="250" Height="250" 
                        Background="White" 
                        CornerRadius="10"
                        Margin="10">
                    <Button x:Name="QuickReportsBtn" 
                            Style="{StaticResource CardButtonStyle}"
                            Click="QuickReportsBtn_Click">
                        <StackPanel>
                            <TextBlock Text="📈📊" 
                                     FontSize="40"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="التقارير" 
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#2C3E2F"
                                     HorizontalAlignment="Center"
                                     Margin="0,10,0,5"/>
                            <TextBlock Text="عرض التقارير والإحصائيات" 
                                     FontSize="12"
                                     Foreground="#5A6D5E"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     Width="200"/>
                        </StackPanel>
                    </Button>
                </Border>
            </WrapPanel>

            <!-- إحصائيات سريعة -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
                <StackPanel>
                    <TextBlock Text="📊 إحصائيات سريعة" 
                             FontSize="20" FontWeight="Bold" 
                             Foreground="#2C3E2F"
                             Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- إحصائية الطلاب -->
                        <Border Grid.Column="0" 
                                Background="#E8F5E9" 
                                CornerRadius="8" 
                                Padding="15"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="👨‍🎓" 
                                         FontSize="24"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="الطلاب" 
                                         FontSize="14"
                                         Foreground="#5A6D5E"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="StudentsCountText"
                                         Text="0" 
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="#2E7D32"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- إحصائية المدرسين -->
                        <Border Grid.Column="1" 
                                Background="#E3F2FD" 
                                CornerRadius="8" 
                                Padding="15"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="👨‍🏫" 
                                         FontSize="24"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="المدرسين" 
                                         FontSize="14"
                                         Foreground="#5A6D5E"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TeachersCountText"
                                         Text="0" 
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="#1565C0"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- إحصائية الصفوف -->
                        <Border Grid.Column="2" 
                                Background="#FFF3E0" 
                                CornerRadius="8" 
                                Padding="15"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="🏫" 
                                         FontSize="24"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="الصفوف" 
                                         FontSize="14"
                                         Foreground="#5A6D5E"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="ClassesCountText"
                                         Text="0" 
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="#EF6C00"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- إحصائية الشعب -->
                        <Border Grid.Column="3" 
                                Background="#F3E5F5" 
                                CornerRadius="8" 
                                Padding="15"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="👥" 
                                         FontSize="24"
                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="الشعب" 
                                         FontSize="14"
                                         Foreground="#5A6D5E"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="GroupsCountText"
                                         Text="0" 
                                         FontSize="28"
                                         FontWeight="Bold"
                                         Foreground="#7B1FA2"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
    </UserControl>