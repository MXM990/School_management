<UserControl x:Class="School_Management.UI.Pages.RegisterStudentSubjects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#2196F3" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="📚" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="تسجيل مواد الطالب" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="اختر الطالب والصف ثم حدد المواد المسجلة" 
                             FontSize="14" Foreground="#E3F2FD"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج التسجيل -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- اسم الطالب -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👨‍🎓" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الطالب" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="StudentComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                SelectedValuePath="StudentID"
                                DisplayMemberPath="FullName"
                                SelectionChanged="StudentComboBox_SelectionChanged">
                        </ComboBox>

                        <TextBlock x:Name="StudentErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- الصف الدراسي -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🏫" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الصف الدراسي" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="ClassComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                SelectedValuePath="ClassID"
                                DisplayMemberPath="EducationLevel"
                                SelectionChanged="ClassComboBox_SelectionChanged">
                        </ComboBox>

                        <TextBlock x:Name="ClassErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- المواد المتاحة -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📚" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="المواد المتاحة للصف" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Border BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="5" Padding="10">
                            <StackPanel>
                                <Button x:Name="SelectAllButton" 
                                        Content="✅ تحديد جميع المواد"
                                        Width="150"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10"
                                        Click="SelectAllButton_Click"/>

                                <ListView x:Name="SubjectsListView" 
                                          Height="200"
                                          SelectionMode="Extended">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding SubjectName}" 
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="5"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>

                        <TextBlock x:Name="SubjectsErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                         FontSize="14"
                                         Foreground="#FF9800"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                              Content="💾 حفظ التسجيل"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"
                              Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                              Content="🧹 مسح النموذج"
                              Width="180"
                              Background="#ABE7B2"
                              BorderBrush="#93C9A8"
                              Margin="0,0,15,0"
                              Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Background="#FFEBEE"
                              BorderBrush="#F44336"
                              Foreground="#F44336"
                              Click="CancelButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>