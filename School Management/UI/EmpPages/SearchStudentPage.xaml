<UserControl x:Class="School_Management.UI.EmpPages.SearchStudentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#CBF3BB" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🔍👨‍🎓" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="بحث عن طالب" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="ابحث عن طالب باستخدام الرقم الوطني أو الاسم" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات البحث -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <StackPanel>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- مربع البحث -->
                        <TextBox x:Name="SearchTextBox"
                               Grid.Column="0"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               FontSize="16"
                               Height="45"
                               TextChanged="SearchTextBox_TextChanged"
                               KeyDown="SearchTextBox_KeyDown"/>

                        <!-- زر البحث -->
                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              FontSize="16"
                              Background="#4CAF50"
                              BorderBrush="#388E3C"
                              Foreground="White"
                              Margin="10,0,0,0"
                              Click="SearchButton_Click"/>
                    </Grid>

                    <!-- خيارات البحث المتقدم -->
                    <Expander x:Name="AdvancedSearchExpander"
                            Header="🔍 بحث متقدم"
                            Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- تصفية حسب العمر -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="🎂 العمر" 
                                             FontSize="14" FontWeight="Bold" 
                                             Foreground="#2C3E2F"
                                             Margin="0,0,0,5"/>
                                    <ComboBox x:Name="AgeFilterComboBox"
                                            Style="{StaticResource RoundedComboBoxStyle}"
                                            SelectedIndex="0">
                                        <ComboBoxItem Content="جميع الأعمار"/>
                                        <ComboBoxItem Content="6-10 سنوات"/>
                                        <ComboBoxItem Content="11-14 سنوات"/>
                                        <ComboBoxItem Content="15-18 سنوات"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- تصفية حسب الحالة -->
                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="📝 حالة التسجيل" 
                                             FontSize="14" FontWeight="Bold" 
                                             Foreground="#2C3E2F"
                                             Margin="0,0,0,5"/>
                                    <ComboBox x:Name="StatusFilterComboBox"
                                            Style="{StaticResource RoundedComboBoxStyle}"
                                            SelectedIndex="0">
                                        <ComboBoxItem Content="جميع الحالات"/>
                                        <ComboBoxItem Content="مسجل"/>
                                        <ComboBoxItem Content="منتظم"/>
                                        <ComboBoxItem Content="منقطع"/>
                                        <ComboBoxItem Content="ملغى"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- تصفية حسب الصف -->
                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="🏫 الصف الدراسي" 
                                             FontSize="14" FontWeight="Bold" 
                                             Foreground="#2C3E2F"
                                             Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ClassFilterComboBox"
                                            Style="{StaticResource RoundedComboBoxStyle}"
                                            DisplayMemberPath="EducationLevel"
                                            SelectedValuePath="ClassID"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="ApplyFiltersButton"
                                  Content="🚀 تطبيق الفلاتر"
                                  Width="150"
                                  Height="35"
                                  Background="#2196F3"
                                  BorderBrush="#1976D2"
                                  Foreground="White"
                                  HorizontalAlignment="Left"
                                  Margin="0,10,0,0"
                                  Click="ApplyFiltersButton_Click"/>
                        </StackPanel>
                    </Expander>

                    <!-- نتائج البحث -->
                    <Border x:Name="ResultsBorder"
                          Background="#F8F9FA"
                          CornerRadius="10"
                          Padding="20"
                          Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="ResultsTitle"
                                     Text="نتائج البحث"
                                     FontSize="18" FontWeight="Bold"
                                     Foreground="#2C3E2F"
                                     Margin="0,0,0,15"/>

                            <ScrollViewer x:Name="ResultsScrollViewer"
                                        VerticalScrollBarVisibility="Auto"
                                        MaxHeight="400">
                                <StackPanel x:Name="ResultsPanel">
                                    <!-- سيتم عرض نتائج البحث هنا -->
                                </StackPanel>
                            </ScrollViewer>

                            <TextBlock x:Name="NoResultsText"
                                     Text="لم يتم العثور على نتائج"
                                     FontSize="14"
                                     Foreground="#757575"
                                     HorizontalAlignment="Center"
                                     Margin="0,20,0,0"
                                     Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- إحصائيات البحث -->
                    <Border x:Name="StatisticsBorder"
                          Background="White"
                          CornerRadius="10"
                          Padding="20"
                          Margin="0,20,0,0"
                          Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="👨‍🎓" FontSize="24"/>
                                <TextBlock Text="عدد النتائج" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="ResultsCountText"
                                         Text="0" 
                                         FontSize="24" FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="🏫" FontSize="24"/>
                                <TextBlock Text="متوسط العمر" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="AverageAgeText"
                                         Text="0" 
                                         FontSize="24" FontWeight="Bold"
                                         Foreground="#2196F3"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="📊" FontSize="24"/>
                                <TextBlock Text="النسبة المئوية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="PercentageText"
                                         Text="0%" 
                                         FontSize="24" FontWeight="Bold"
                                         Foreground="#4CAF50"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>