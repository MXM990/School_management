<UserControl x:Class="School_Management.UI.Pages.ViewEmployeesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#2C3E50" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍💼📋" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="عرض جميع الموظفين" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قائمة جميع الموظفين المسجلين في النظام" 
                             FontSize="14" Foreground="#ECF0F1"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- أدوات التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- مربع البحث -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔍 بحث" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E50"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="SearchTextBox_TextChanged"
                               ToolTip="ابحث حسب اسم الموظف، المسمى الوظيفي، الرقم الوطني أو اسم المستخدم"/>
                    </StackPanel>

                    <!-- تصفية حسب النشاط -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="✅ تصفية حسب الحالة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E50"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="StatusFilterComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                Width="150"
                                SelectionChanged="StatusFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="جميع الموظفين"/>
                            <ComboBoxItem Content="نشط فقط"/>
                            <ComboBoxItem Content="غير نشط"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- تصفية حسب المسمى الوظيفي -->
                    <StackPanel Grid.Column="2" Margin="20,0,0,0">
                        <TextBlock Text="👔 تصفية حسب الوظيفة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E50"
                                 Margin="0,0,0,5"/>
                        <ComboBox x:Name="JobFilterComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                Width="150"
                                SelectionChanged="JobFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="جميع الوظائف"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- أزرار الإجراءات -->
                    <StackPanel Grid.Column="3" Margin="20,0,0,0">
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                 FontSize="14" FontWeight="Bold" Foreground="#2C3E50"
                                 Margin="0,0,0,5"/>
                        <Button x:Name="RefreshButton"
                              Content="🔄 تحديث"
                              Width="120"
                              Height="35"
                              Background="#ECF0F1"
                              BorderBrush="#2C3E50"
                              Click="RefreshButton_Click"
                              Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- جدول الموظفين -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- رأس الجدول -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="1" Text="اسم الموظف" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="2" Text="المسمى الوظيفي" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="3" Text="الراتب" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="4" Text="تاريخ التعيين" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="5" Text="الحالة" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="6" Text="إجراءات" 
                                     FontWeight="Bold" Foreground="#2C3E50"/>
                        </Grid>
                    </Border>

                    <!-- قائمة الموظفين -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="EmployeesListPanel">
                            <!-- سيتم إضافة الموظفين هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- إحصائيات -->
                    <Border Grid.Row="2" 
                            Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="👥" FontSize="20"/>
                                <TextBlock Text="إجمالي الموظفين" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="TotalEmployeesText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#2C3E50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="✅" FontSize="20"/>
                                <TextBlock Text="نشط" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="ActiveEmployeesText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#27AE60"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="❌" FontSize="20"/>
                                <TextBlock Text="غير نشط" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="InactiveEmployeesText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#E74C3C"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="💰" FontSize="20"/>
                                <TextBlock Text="متوسط الراتب" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="AverageSalaryText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#F39C12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                                <TextBlock Text="👔" FontSize="20"/>
                                <TextBlock Text="الوظائف المختلفة" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                                <TextBlock x:Name="DifferentJobsText" 
                                         Text="0" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="#3498DB"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>