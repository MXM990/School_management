<UserControl x:Class="School_Management.UI.Pages.EditTeacherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- أنماط مشابهة لواجهات الموظفين -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    <Path Grid.Column="1"
                                          x:Name="arrow"
                                          Data="M0,0 L5,5 L10,0"
                                          Stroke="#666"
                                          StrokeThickness="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#93BFC7"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7DA8B0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#2C3E2F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#ABE7B2"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#93C9A8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#FFEBEE"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#93BFC7" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="✏️" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="تعديل بيانات مدرس" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قم بتعديل البيانات التالية للمدرس ثم اضغط على زر التحديث" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- حقل البحث عن المدرس -->
            <Border Background="White" CornerRadius="10" Padding="30" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن المدرس للتعديل" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               BorderBrush="#D1D1D1"
                               BorderThickness="1"
                               VerticalContentAlignment="Center"
                               />

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#93BFC7"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="-1,0,0,0"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: الاسم، الرقم الوطني، الاختصاص، أو معرف المدرس" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="👨‍🏫 نتائج البحث" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <ListView x:Name="SearchResultsListView"
                            Height="200"
                            BorderBrush="#D1D1D1"
                            BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="المعرف" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="الاسم" Width="150" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="الرقم الوطني" Width="120" DisplayMemberBinding="{Binding NationalId}"/>
                                <GridViewColumn Header="الاختصاص" Width="120" DisplayMemberBinding="{Binding Specialization}"/>
                                <GridViewColumn Header="الخبرة" Width="80" DisplayMemberBinding="{Binding ExperienceYears}"/>
                                <GridViewColumn Header="الراتب" Width="100" DisplayMemberBinding="{Binding Salary, StringFormat={}{0:N0} ل.س}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button x:Name="SelectTeacherButton"
                          Content="✓ تحديد المدرس للتعديل"
                          Width="200"
                          Height="40"
                          Background="#ABE7B2"
                          Foreground="#2C3E2F"
                          FontSize="14"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"
                          Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- نموذج التعديل -->
            <Border x:Name="EditFormBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- معلومات المدرس المحدد -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F0F8FF" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="👨‍🏫" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock x:Name="SelectedTeacherInfo" 
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>
                            <TextBlock x:Name="TeacherGuidText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- اسم المدرس -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم المدرس" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="TeacherNameTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <!-- الرقم الوطني -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🆔" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الرقم الوطني" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="NationalIdTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               MaxLength="14"/>
                    </StackPanel>

                    <!-- الاختصاص -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📚" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الاختصاص" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="SpecializationComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"/>
                    </StackPanel>

                    <!-- العمر -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🎂" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العمر" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="AgeTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Text="30"/>
                    </StackPanel>

                    <!-- رقم الهاتف النقال -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📱" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف النقال" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="MobilePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"/>
                        </Grid>
                    </StackPanel>

                    <!-- رقم الهاتف الأرضي -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="☎️" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف الأرضي" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="LandlinePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"/>
                        </Grid>
                    </StackPanel>

                    <!-- سنوات الخبرة -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📅" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="سنوات الخبرة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="ExperienceYearsTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Text="5"/>

                        <TextBlock Text="عدد سنوات الخبرة في التدريس" 
                                 FontSize="11"
                                 Foreground="#6C757D"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- الراتب (اختياري) -->
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="💰" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الراتب (اختياري)" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="ل.س"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="SalaryTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"/>
                        </Grid>
                    </StackPanel>

                    <!-- معلومات إضافية -->
                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" CornerRadius="5" Margin="0,0,0,20">
                        <StackPanel Margin="15">
                            <TextBlock Text="📝 معلومات إضافية (اختيارية)" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <TextBox x:Name="AdditionalInfoTextBox"
                                   Height="80"
                                   FontSize="14"
                                   BorderBrush="#D1D1D1"
                                   BorderThickness="1"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <ScrollViewer x:Name="PART_ContentHost" Padding="12"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     x:Name="StatusIcon" 
                                     Text="⚠️" 
                                     FontSize="16" 
                                     Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="1"
                                     x:Name="StatusMessage" 
                                     FontSize="14"
                                     Foreground="#FF9800"
                                     TextWrapping="Wrap"/>
                        </Grid>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="UpdateButton"
                              Content="💾 تحديث البيانات"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"/>

                        <Button x:Name="ResetButton"
                              Content="↻ إعادة تعيين"
                              Width="180"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Margin="0,0,15,0"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Style="{StaticResource CancelButtonStyle}"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="سيتم تحديث بيانات المدرس في قاعدة البيانات فور الضغط على زر التحديث" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يمكنك البحث عن أي مدرس باستخدام الاسم، الرقم الوطني، أو الاختصاص" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>