<UserControl x:Class="School_Management.UI.Pages.AddEmployeePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- أنماط الأزرار ذات الزوايا الدائرية -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- نمط خاص للأزرار الرئيسية -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#93BFC7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#7DA8B0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7DA8B0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#B0BEC5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- نمط خاص لأزرار الإلغاء -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="BorderBrush" Value="#6C757D"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- نمط لأزرار الحقول -->
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFCDD2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- نمط TextBox -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- نمط ComboBox -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Margin="{TemplateBinding Padding}"/>
                                    <Path Grid.Column="1"
                                          x:Name="arrow"
                                          Data="M0,0 L5,5 L10,0"
                                          Stroke="#666"
                                          StrokeThickness="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#93BFC7" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="➕" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="إضافة موظف جديد" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="املأ النموذج التالي لإضافة موظف جديد إلى النظام" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نموذج الإضافة -->
            <Border Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- رسالة GUID (مخفية) -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔒" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="سيتم إنشاء رقم تعريف فريد (GUID) تلقائياً عند حفظ البيانات" 
                                     FontSize="12" Foreground="#6C757D"/>
                        </StackPanel>
                    </Border>

                    <!-- اسم الموظف -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الموظف" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="EmployeeNameTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               TextChanged="TextBox_TextChanged"/>

                        <TextBlock x:Name="NameErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- الرقم الوطني -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🆔" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الرقم الوطني" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="NationalIdTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               MaxLength="14"
                               PreviewTextInput="NationalIdTextBox_PreviewTextInput"
                               TextChanged="TextBox_TextChanged"/>

                        <TextBlock x:Name="NationalIdErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- المهنة -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="💼" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="المهنة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="JobComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"
                                SelectionChanged="JobComboBox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock x:Name="JobErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- العمر -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🎂" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العمر" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="AgeSlider"
                                  Grid.Column="0"
                                  Minimum="18" 
                                  Maximum="70" 
                                  Value="25"
                                  TickFrequency="1"
                                  IsSnapToTickEnabled="True"
                                  TickPlacement="BottomRight"
                                  Margin="0,0,10,0"
                                  ValueChanged="AgeSlider_ValueChanged"/>

                            <Border Grid.Column="1"
                                  Background="#ECF4E8"
                                  CornerRadius="5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1">
                                <TextBlock x:Name="AgeValueText"
                                         Text="25 سنة"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Foreground="#2C3E2F"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>
                        </Grid>

                        <TextBlock Text="يمكنك استخدام شريط التمرير أو إدخال القيمة يدوياً" 
                                 FontSize="11"
                                 Foreground="#6C757D"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- رقم الهاتف النقال -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📱" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف النقال" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="MobilePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"
                                   MaxLength="10"
                                   PreviewTextInput="PhoneTextBox_PreviewTextInput"
                                   TextChanged="TextBox_TextChanged"/>
                        </Grid>

                        <TextBlock x:Name="MobilePhoneErrorText" 
                                 Foreground="#F44336" 
                                 FontSize="12"
                                 Margin="5,5,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- رقم الهاتف الأرضي -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="☎️" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف الأرضي" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="LandlinePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"
                                   MaxLength="8"
                                   PreviewTextInput="PhoneTextBox_PreviewTextInput"/>
                        </Grid>

                        <TextBlock Text="اختياري" 
                                 FontSize="11"
                                 Foreground="#6C757D"
                                 Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- معلومات إضافية -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="📝 معلومات إضافية (اختيارية)" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <TextBox x:Name="AdditionalInfoTextBox"
                                   Height="80"
                                   FontSize="14"
                                   Padding="12"
                                   BorderBrush="#D1D1D1"
                                   BorderThickness="1"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <StackPanel x:Name="FormStatusPanel">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon" Text="⚠️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock x:Name="StatusMessage" 
                                         FontSize="14"
                                         Foreground="#FF9800"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="SaveButton"
                              Content="💾 حفظ الموظف"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"
                              Click="SaveButton_Click"/>

                        <Button x:Name="ClearButton"
                              Content="🧹 مسح النموذج"
                              Width="180"
                              Style="{StaticResource ClearButtonStyle}"
                              Margin="0,0,15,0"
                              Click="ClearButton_Click"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Style="{StaticResource CancelButtonStyle}"
                              Click="CancelButton_Click"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0"
                            Padding="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="سيتم حفظ بيانات الموظف في قاعدة البيانات فور الضغط على زر الحفظ" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يمكنك إضافة المزيد من البيانات عبر صفحة تعديل الموظف" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>