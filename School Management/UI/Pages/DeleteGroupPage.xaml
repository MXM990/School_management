<UserControl x:Class="School_Management.UI.Pages.DeleteGroupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#F44336" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🗑️👥" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="حذف شعبة" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="ابحث عن الشعبة المراد حذفها ثم قم بتأكيد العملية" 
                             FontSize="14" Foreground="#FFEBEE"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- البحث عن الشعبة -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن الشعبة" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               ToolTip="ابحث باسم الشعبة أو المعلومات الإضافية"/>

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="10,0,0,0"
                              Click="SearchButton_Click"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: اسم الشعبة - المعلومات الإضافية" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="👥 نتائج البحث" 
                                 FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"/>
                        <TextBlock x:Name="ResultsCountText"
                                 Text=" (0 نتيجة)"
                                 FontSize="14"
                                 Foreground="#6C757D"
                                 Margin="5,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="اسم الشعبة" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="المعلومات الإضافية" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="تحديد" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Height="250" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SearchResultsPanel">
                            <!-- سيتم إضافة نتائج البحث هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- تفاصيل الشعبة المحددة -->
            <Border x:Name="GroupDetailsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="📋 تفاصيل الشعبة المحددة" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,20"/>

                    <!-- بطاقة معلومات الشعبة -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,25"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- معلومات الشعبة -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="👥 اسم الشعبة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     x:Name="GroupNameText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                     Text="📊 حالة المعلومات:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <Border x:Name="InfoStatusBorder"
                                    Grid.Row="0" Grid.Column="3"
                                    CornerRadius="5"
                                    Padding="5,2,5,2"
                                    Margin="0,0,0,10">
                                <TextBlock x:Name="InfoStatusText"
                                         FontSize="12"
                                         FontWeight="Bold"
                                         HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="📝 المعلومات الإضافية:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                     x:Name="AdditionalInfoText"
                                     FontSize="14"
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                     Text="🔍 طول المعلومات:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" 
                                     x:Name="InfoLengthText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                     Text="🔑 معرف الشعبة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                     x:Name="GroupIDText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                     Text="📊 مراحل العملية:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" 
                                     x:Name="ProcessStagesText"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#F44336"
                                     Margin="0,0,0,10"/>
                        </Grid>
                    </Border>

                    <!-- تحذير الحذف -->
                    <Border Background="#FFEBEE" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,30"
                            BorderBrush="#F44336"
                            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="تحذير هام!" 
                                         FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>

                            <TextBlock Text="عملية حذف الشعبة هي عملية لا يمكن التراجع عنها." 
                                     FontSize="14" FontWeight="Bold" Foreground="#F44336"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="سيتم حذف جميع بيانات الشعبة بشكل نهائي من قاعدة البيانات، بما في ذلك:" 
                                     FontSize="14"
                                     Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="بيانات الشعبة الأساسية" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="الطلاب المسجلين في هذه الشعبة (إن وجدوا)" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="جميع السجلات المرتبطة بهذه الشعبة" 
                                         FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="يرجى التأكد من اختيار الشعبة الصحيحة قبل المتابعة." 
                                     FontSize="14" FontWeight="Bold"
                                     Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="DeleteButton"
                              Content="🗑️ تأكيد الحذف"
                              Width="200"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="0,0,15,0"
                              Click="DeleteButton_Click"/>

                        <Button x:Name="CancelDeleteButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Height="45"
                              Background="#757575"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Click="CancelDeleteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- إحصائيات -->
            <Border Background="#F8F9FA" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📊 إحصائيات الشعب" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="24"/>
                            <TextBlock Text="إجمالي الشعب" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="TotalGroupsText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#2C3E2F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="✅" FontSize="24"/>
                            <TextBlock Text="بمعلومات إضافية" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="GroupsWithInfoText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="⭕" FontSize="24"/>
                            <TextBlock Text="بدون معلومات" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="GroupsWithoutInfoText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#FF9800"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="📏" FontSize="24"/>
                            <TextBlock Text="أطول اسم" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="LongestNameText" 
                                     Text="-" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- تذييل الصفحة -->
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0"
                    Margin="0,10,0,0"
                    Padding="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📝 إجراءات الحذف:" 
                             FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="1." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="البحث عن الشعبة باستخدام الاسم أو المعلومات الإضافية" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="2." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تحديد الشعبة من قائمة النتائج" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="3." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="مراجعة تفاصيل الشعبة بعناية" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="4." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تأكيد الحذف بعد قراءة التحذيرات" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="⚠️" Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="يجب على الأدمن فقط القيام بهذه العملية" 
                                 FontSize="12" FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>