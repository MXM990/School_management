<UserControl x:Class="School_Management.UI.Pages.ViewAllStudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">


    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#93BFC7" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="👨‍🎓" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="عرض جميع الطلاب" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قائمة جميع الطلاب المسجلين في النظام" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- شريط التحكم -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- حقل البحث -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Height="40"
                               FontSize="14"
                               Padding="12"
                               BorderBrush="#D1D1D1"
                               BorderThickness="1"
                               VerticalContentAlignment="Center"
                               />

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍"
                              Width="50"
                              Height="40"
                              Background="#93BFC7"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="-1,0,0,0"/>
                    </Grid>

                    <!-- فلترة حسب المرحلة -->
                    <ComboBox x:Name="EducationLevelFilterComboBox"
                            Grid.Column="1"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,10,0"
                            VerticalContentAlignment="Center"
                            />

                    <!-- فلترة حسب الشعبة -->
                    <ComboBox x:Name="GroupFilterComboBox"
                            Grid.Column="2"
                            Width="150"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,10,0"
                            VerticalContentAlignment="Center"
                            />

                    <!-- زر التحديث -->
                    <Button x:Name="RefreshButton"
                          Grid.Column="3"
                          Content="🔄 تحديث"
                          Width="100"
                          Height="40"
                          Style="{StaticResource SecondaryButtonStyle}"
                          Margin="0,0,10,0"/>

                    <!-- زر التصدير -->
                    <Button x:Name="ExportButton"
                          Grid.Column="4"
                          Content="📥 تصدير"
                          Width="100"
                          Height="40"
                          Style="{StaticResource ExportButtonStyle}"/>
                </Grid>
            </Border>

            <!-- إحصائيات -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📊 إحصائيات الطلاب" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <WrapPanel>
                        <!-- إجمالي الطلاب -->
                        <Border Background="#F0F8FF" 
                                CornerRadius="10" 
                                Padding="15" 
                                Margin="5"
                                Width="180">
                            <StackPanel>
                                <TextBlock Text="👨‍🎓 إجمالي الطلاب" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                                <TextBlock x:Name="TotalStudentsText"
                                         Text="0"
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="#93BFC7"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- حسب المرحلة -->
                        <Border Background="#F8F9FA" 
                                CornerRadius="10" 
                                Padding="15" 
                                Margin="5"
                                Width="180">
                            <StackPanel>
                                <TextBlock Text="📚 حسب المرحلة" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                                <TextBlock x:Name="ByEducationLevelText"
                                         Text="0 مرحلة"
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="#5A6D5E"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- حسب الجنس -->
                        <Border Background="#FFF3E0" 
                                CornerRadius="10" 
                                Padding="15" 
                                Margin="5"
                                Width="180">
                            <StackPanel>
                                <TextBlock Text="👦 حسب الجنس" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                                <TextBlock x:Name="ByGenderText"
                                         Text="0 ذكور / 0 إناث"
                                         FontSize="14" 
                                         FontWeight="Bold" 
                                         Foreground="#FF9800"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- آخر تحديث -->
                        <Border Background="#F5F5F5" 
                                CornerRadius="10" 
                                Padding="15" 
                                Margin="5"
                                Width="180">
                            <StackPanel>
                                <TextBlock Text="🕐 آخر تحديث" 
                                         FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                                <TextBlock x:Name="LastUpdateText"
                                         Text="--"
                                         FontSize="14" 
                                         Foreground="#6C757D"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- جدول الطلاب -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="📋 قائمة الطلاب" 
                                 FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"/>

                        <TextBlock x:Name="StudentsCountText"
                                 Text=" (0 طالب)"
                                 FontSize="18"
                                 Foreground="#6C757D"
                                 Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- DataGrid لعرض الطلاب -->
                    <DataGrid x:Name="StudentsDataGrid"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeColumns="True"
                            CanUserResizeRows="False"
                            CanUserSortColumns="True"
                            SelectionMode="Single"
                            IsReadOnly="True"
                            Height="400"
                            BorderBrush="#D1D1D1"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <DataGrid.Columns>
                            <!-- معرف الطالب -->
                            <DataGridTextColumn Header="🔒 المعرف" 
                                              Binding="{Binding Id}"
                                              Width="100"
                                              IsReadOnly="True"/>

                            <!-- الصورة الشخصية -->
                            <DataGridTemplateColumn Header="🖼️" 
                                                  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Width="35" 
                                                Height="35" 
                                                CornerRadius="17.5"
                                                Background="#E0E0E0"
                                                BorderBrush="#93BFC7"
                                                BorderThickness="2">
                                            <TextBlock Text="{Binding ProfileInitial}" 
                                                     FontSize="14"
                                                     FontWeight="Bold"
                                                     Foreground="#2C3E2F"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- اسم الطالب -->
                            <DataGridTextColumn Header="👤 اسم الطالب" 
                                              Binding="{Binding FullName}"
                                              Width="180"/>

                            <!-- الرقم الوطني/الآلي -->
                            <DataGridTextColumn Header="🆔 الرقم الوطني" 
                                              Binding="{Binding NationalNumber}"
                                              Width="130"/>

                            <!-- الجنس -->
                            <DataGridTextColumn Header="⚤ الجنس" 
                                              Binding="{Binding Gender}"
                                              Width="80"/>

                            <!-- تاريخ الميلاد -->
                            <DataGridTextColumn Header="🎂 تاريخ الميلاد" 
                                              Binding="{Binding BirthDate, StringFormat=yyyy/MM/dd}"
                                              Width="120"/>

                            <!-- المرحلة -->
                            <DataGridTextColumn Header="📚 المرحلة" 
                                              Binding="{Binding EducationLevel}"
                                              Width="100"/>

                            <!-- الشعبة -->
                            <DataGridTextColumn Header="👥 الشعبة" 
                                              Binding="{Binding GroupName}"
                                              Width="120"/>

                            <!-- اسم ولي الأمر -->
                            <DataGridTextColumn Header="👨‍👦 ولي الأمر" 
                                              Binding="{Binding GuardianName}"
                                              Width="150"/>

                            <!-- الهاتف -->
                            <DataGridTextColumn Header="📱 الهاتف" 
                                              Binding="{Binding Phone}"
                                              Width="120"/>

                            <!-- حالة التسجيل -->
                            <DataGridTemplateColumn Header="✅ الحالة" 
                                                  Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" 
                                                Padding="5,2"
                                                Background="{Binding StatusColor}">
                                            <TextBlock Text="{Binding Status}" 
                                                     FontSize="12"
                                                     FontWeight="Bold"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- أزرار الإجراءات -->
                            <DataGridTemplateColumn Header="⚙️ إجراءات" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- زر التعديل -->
                                            <Button x:Name="EditButton"
                                                  Content="✏️"
                                                  Width="35"
                                                  Height="30"
                                                  Background="#FFF3E0"
                                                  Foreground="#FF9800"
                                                  BorderBrush="#FF9800"
                                                  BorderThickness="1"
                                                  Margin="2"
                                                  ToolTip="تعديل"/>

                                            <!-- زر الحذف -->
                                            <Button x:Name="DeleteButton"
                                                  Content="🗑️"
                                                  Width="35"
                                                  Height="30"
                                                  Background="#FFEBEE"
                                                  Foreground="#F44336"
                                                  BorderBrush="#F44336"
                                                  BorderThickness="1"
                                                  Margin="2"
                                                  ToolTip="حذف"/>

                                            <!-- زر التفاصيل -->
                                            <Button x:Name="DetailsButton"
                                                  Content="👁️"
                                                  Width="35"
                                                  Height="30"
                                                  Background="#E3F2FD"
                                                  Foreground="#2196F3"
                                                  BorderBrush="#2196F3"
                                                  BorderThickness="1"
                                                  Margin="2"
                                                  ToolTip="تفاصيل"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- أزرار إضافية -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20">
                        <Button x:Name="AddStudentButton"
                              Content="➕ إضافة طالب جديد"
                              Width="150"
                              Height="40"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,10,0"/>

                        <Button x:Name="PrintCardsButton"
                              Content="🖨️ طباعة بطاقات"
                              Width="150"
                              Height="40"
                              Style="{StaticResource InfoButtonStyle}"
                              Margin="0,0,10,0"/>

                        <Button x:Name="GenerateReportButton"
                              Content="📊 تقرير شامل"
                              Width="150"
                              Height="40"
                              Style="{StaticResource ExportButtonStyle}"/>
                    </StackPanel>

                    <!-- عناصر التصفح -->
                    <Border BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,10,0,0"
                            Padding="0,20,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- معلومات التصفح -->
                            <TextBlock Grid.Column="0"
                                     x:Name="PaginationInfoText"
                                     Text="عرض 0 إلى 0 من 0"
                                     FontSize="14"
                                     Foreground="#6C757D"
                                     VerticalAlignment="Center"/>

                            <!-- أزرار التصفح -->
                            <StackPanel Grid.Column="1"
                                      Orientation="Horizontal"
                                      HorizontalAlignment="Center">
                                <Button x:Name="FirstPageButton"
                                      Content="⏮️ الأولى"
                                      Width="90"
                                      Height="35"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Margin="2"/>

                                <Button x:Name="PreviousPageButton"
                                      Content="◀️ السابقة"
                                      Width="90"
                                      Height="35"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Margin="2"/>

                                <TextBlock x:Name="CurrentPageText"
                                         Text="صفحة 1 من 1"
                                         FontSize="14"
                                         Foreground="#2C3E2F"
                                         VerticalAlignment="Center"
                                         Margin="10,0"/>

                                <Button x:Name="NextPageButton"
                                      Content="▶️ التالية"
                                      Width="90"
                                      Height="35"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Margin="2"/>

                                <Button x:Name="LastPageButton"
                                      Content="⏭️ الأخيرة"
                                      Width="90"
                                      Height="35"
                                      Style="{StaticResource SecondaryButtonStyle}"
                                      Margin="2"/>
                            </StackPanel>

                            <!-- عدد العناصر في الصفحة -->
                            <StackPanel Grid.Column="2"
                                      Orientation="Horizontal"
                                      HorizontalAlignment="Right">
                                <TextBlock Text="عدد العناصر:"
                                         FontSize="14"
                                         Foreground="#6C757D"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0"/>

                                <ComboBox x:Name="PageSizeComboBox"
                                        Width="80"
                                        Height="35"
                                        FontSize="14"
                                        VerticalContentAlignment="Center">
                                    <ComboBoxItem Content="10" IsSelected="True"/>
                                    <ComboBoxItem Content="25"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>