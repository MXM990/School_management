<UserControl x:Class="School_Management.UI.Pages.EditEmployeePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="900">

    

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#93BFC7" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="✏️" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="تعديل بيانات موظف" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="قم بتعديل البيانات التالية للموظف ثم اضغط على زر التحديث" 
                             FontSize="14" Foreground="#ECF4E8"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- حقل البحث عن الموظف -->
            <Border Background="White" CornerRadius="10" Padding="30" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن الموظف للتعديل" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               BorderBrush="#D1D1D1"
                               BorderThickness="1"
                               VerticalContentAlignment="Center"
                              />

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#93BFC7"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="-1,0,0,0"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: الاسم، الرقم الوطني، أو معرف الموظف" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="👥 نتائج البحث" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <ListView x:Name="SearchResultsListView"
                            Height="200"
                            BorderBrush="#D1D1D1"
                            BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="المعرف" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="الاسم" Width="150" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="الرقم الوطني" Width="120" DisplayMemberBinding="{Binding NationalId}"/>
                                <GridViewColumn Header="المهنة" Width="120" DisplayMemberBinding="{Binding Job}"/>
                                <GridViewColumn Header="العمر" Width="80" DisplayMemberBinding="{Binding Age}"/>
                                <GridViewColumn Header="رقم الهاتف" Width="120" DisplayMemberBinding="{Binding MobilePhone}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button x:Name="SelectEmployeeButton"
                          Content="✓ تحديد الموظف للتعديل"
                          Width="200"
                          Height="40"
                          Background="#ABE7B2"
                          Foreground="#2C3E2F"
                          FontSize="14"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"
                          Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- نموذج التعديل -->
            <Border x:Name="EditFormBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- معلومات الموظف المحدد -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F0F8FF" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="👤" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock x:Name="SelectedEmployeeInfo" 
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Foreground="#2C3E2F"/>
                            </StackPanel>
                            <TextBlock x:Name="EmployeeGuidText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- اسم الموظف -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="اسم الموظف" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="EmployeeNameTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"/>
                    </StackPanel>

                    <!-- الرقم الوطني -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🆔" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="الرقم الوطني" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="NationalIdTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               MaxLength="14"/>
                    </StackPanel>

                    <!-- المهنة -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="💼" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="المهنة" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <ComboBox x:Name="JobComboBox"
                                Style="{StaticResource RoundedComboBoxStyle}"/>
                    </StackPanel>

                    <!-- العمر -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="🎂" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="العمر" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <TextBox x:Name="AgeTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Text="25"/>
                    </StackPanel>

                    <!-- رقم الهاتف النقال -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="📱" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف النقال" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Text=" *" Foreground="#F44336"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="MobilePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"/>
                        </Grid>
                    </StackPanel>

                    <!-- رقم الهاتف الأرضي -->
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="☎️" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="رقم الهاتف الأرضي" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                  Background="#ECF4E8"
                                  CornerRadius="5,0,0,5"
                                  BorderBrush="#D1D1D1"
                                  BorderThickness="1,1,0,1">
                                <TextBlock Text="+963"
                                         FontSize="14"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Padding="10"/>
                            </Border>

                            <TextBox x:Name="LandlinePhoneTextBox"
                                   Grid.Column="1"
                                   Style="{StaticResource RoundedTextBoxStyle}"
                                   Margin="-1,0,0,0"
                                   BorderThickness="0,1,1,1"/>
                        </Grid>
                    </StackPanel>

                    <!-- معلومات إضافية -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                            Background="#F8F9FA" CornerRadius="5" Margin="0,0,0,20">
                        <StackPanel Margin="15">
                            <TextBlock Text="📝 معلومات إضافية (اختيارية)" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <TextBox x:Name="AdditionalInfoTextBox"
                                   Height="80"
                                   FontSize="14"
                                   BorderBrush="#D1D1D1"
                                   BorderThickness="1"
                                   AcceptsReturn="True"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                            <ScrollViewer x:Name="PART_ContentHost" Padding="12"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#93BFC7"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- حالة النموذج -->
                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                            x:Name="FormStatusBorder"
                            Background="#FFF3E0" 
                            CornerRadius="5" 
                            Margin="0,0,0,20"
                            Visibility="Collapsed">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                     x:Name="StatusIcon" 
                                     Text="⚠️" 
                                     FontSize="16" 
                                     Margin="0,0,10,0"/>

                            <TextBlock Grid.Column="1"
                                     x:Name="StatusMessage" 
                                     FontSize="14"
                                     Foreground="#FF9800"
                                     TextWrapping="Wrap"/>
                        </Grid>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="UpdateButton"
                              Content="💾 تحديث البيانات"
                              Width="200"
                              Style="{StaticResource PrimaryButtonStyle}"
                              Margin="0,0,15,0"/>

                        <Button x:Name="ResetButton"
                              Content="↻ إعادة تعيين"
                              Width="180"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Margin="0,0,15,0"/>

                        <Button x:Name="CancelButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Style="{StaticResource CancelButtonStyle}"/>
                    </StackPanel>

                    <!-- تذييل الصفحة -->
                    <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#E0E0E0"
                            Margin="0,30,0,0">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="📋 ملاحظات هامة:" 
                                     FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                                     Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="الحقول التي تحمل علامة (*) إلزامية" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="سيتم تحديث بيانات الموظف في قاعدة البيانات فور الضغط على زر التحديث" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                                <TextBlock Text="يمكنك البحث عن أي موظف باستخدام الاسم أو الرقم الوطني" 
                                         FontSize="12" Foreground="#5A6D5E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>