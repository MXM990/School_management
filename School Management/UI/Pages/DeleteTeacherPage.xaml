<UserControl x:Class="School_Management.UI.Pages.DeleteTeacherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1100">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#F44336" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🗑️👨‍🏫" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="حذف مدرس" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="ابحث عن المدرس المراد حذفه ثم قم بتأكيد العملية" 
                             FontSize="14" Foreground="#FFEBEE"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- البحث عن المدرس -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن المدرس" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               TextChanged="SearchTextBox_TextChanged"
                               ToolTip="ابحث باسم المدرس أو الرقم الوطني أو التخصص"/>

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="10,0,0,0"
                              Click="SearchButton_Click"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: اسم المدرس - الرقم الوطني - التخصص" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="👨‍🏫 نتائج البحث" 
                                 FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"/>
                        <TextBlock x:Name="ResultsCountText"
                                 Text=" (0 نتيجة)"
                                 FontSize="14"
                                 Foreground="#6C757D"
                                 Margin="5,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="اسم المدرس" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="الرقم الوطني" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="التخصص" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="4" Text="سنوات الخبرة" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="5" Text="تحديد" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Height="250" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SearchResultsPanel">
                            <!-- سيتم إضافة نتائج البحث هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- تفاصيل المدرس المحدد -->
            <Border x:Name="TeacherDetailsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="📋 تفاصيل المدرس المحدد" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,20"/>

                    <!-- بطاقة معلومات المدرس -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,25"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- المعلومات الأساسية -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="👨‍🏫 اسم المدرس:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     x:Name="TeacherNameText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                     Text="📱 رقم الهاتف:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" 
                                     x:Name="PhoneNumberText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="🆔 الرقم الوطني:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                     x:Name="NationalNumberText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" 
                                     Text="📚 التخصص:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" 
                                     x:Name="SpecializationText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                     Text="🎂 العمر:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                     x:Name="AgeText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                     Text="🏆 سنوات الخبرة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" 
                                     x:Name="YearsOfExperienceText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                     Text="💰 الراتب:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                     x:Name="SalaryText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="2" 
                                     Text="📅 تاريخ التعيين:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" 
                                     x:Name="HireDateText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                     Text="⏳ مدة الخدمة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                     x:Name="ServiceDurationText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="2" 
                                     Text="📊 مستوى الخبرة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" 
                                     x:Name="ExperienceLevelText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                     Text="🔑 معرف المدرس:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" 
                                     x:Name="TeacherIDText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,0,0,10"/>
                        </Grid>
                    </Border>

                    <!-- تحذير الحذف -->
                    <Border Background="#FFEBEE" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,30"
                            BorderBrush="#F44336"
                            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="تحذير هام!" 
                                         FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>

                            <TextBlock Text="عملية حذف المدرس هي عملية لا يمكن التراجع عنها." 
                                     FontSize="14" FontWeight="Bold" Foreground="#F44336"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="سيتم حذف جميع بيانات المدرس بشكل نهائي من قاعدة البيانات، بما في ذلك:" 
                                     FontSize="14"
                                     Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="المعلومات الشخصية والمهنية" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="الصفوف التي يدرسها (إن وجدت)" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="جميع السجلات المرتبطة بهذا المدرس" 
                                         FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="يرجى التأكد من اختيار المدرس الصحيح قبل المتابعة." 
                                     FontSize="14" FontWeight="Bold"
                                     Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="DeleteButton"
                              Content="🗑️ تأكيد الحذف"
                              Width="200"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="0,0,15,0"
                              Click="DeleteButton_Click"/>

                        <Button x:Name="CancelDeleteButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Height="45"
                              Background="#757575"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Click="CancelDeleteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- إحصائيات -->
            <Border Background="#F8F9FA" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📊 إحصائيات المدرسين" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="👨‍🏫" FontSize="24"/>
                            <TextBlock Text="إجمالي المدرسين" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="TotalTeachersText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#2C3E2F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="💰" FontSize="24"/>
                            <TextBlock Text="متوسط الراتب" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="AvgSalaryText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#2196F3"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="🏆" FontSize="24"/>
                            <TextBlock Text="متوسط الخبرة" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="AvgExperienceText" 
                                     Text="0 سنة" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="📚" FontSize="24"/>
                            <TextBlock Text="عدد التخصصات" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="SpecializationsCountText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#FF9800"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- تذييل الصفحة -->
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0"
                    Margin="0,10,0,0"
                    Padding="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📝 إجراءات الحذف:" 
                             FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="1." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="البحث عن المدرس باستخدام الاسم أو الرقم الوطني أو التخصص" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="2." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تحديد المدرس من قائمة النتائج" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="3." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="مراجعة تفاصيل المدرس بعناية" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="4." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تأكيد الحذف بعد قراءة التحذيرات" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="⚠️" Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="يجب على الأدمن فقط القيام بهذه العملية" 
                                 FontSize="12" FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>