<UserControl x:Class="School_Management.UI.Pages.DeleteClassPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#F44336" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🗑️🏫" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="حذف صف دراسي" 
                                 FontSize="24" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="ابحث عن الصف الدراسي المراد حذفه ثم قم بتأكيد العملية" 
                             FontSize="14" Foreground="#FFEBEE"
                             HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- البحث عن الصف -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن الصف الدراسي" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Style="{StaticResource RoundedTextBoxStyle}"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               TextChanged="SearchTextBox_TextChanged"
                               ToolTip="ابحث بمستوى التعليم أو المعلومات الإضافية"/>

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="10,0,0,0"
                              Click="SearchButton_Click"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: مستوى التعليم - المعلومات الإضافية" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="🏫 نتائج البحث" 
                                 FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"/>
                        <TextBlock x:Name="ResultsCountText"
                                 Text=" (0 نتيجة)"
                                 FontSize="14"
                                 Foreground="#6C757D"
                                 Margin="5,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Background="#F5F5F5" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="#" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="1" Text="مستوى التعليم" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="2" Text="المعلومات الإضافية" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="3" Text="تاريخ الإنشاء" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                            <TextBlock Grid.Column="4" Text="تحديد" 
                                     FontWeight="Bold" Foreground="#2C3E2F"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Height="250" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="SearchResultsPanel">
                            <!-- سيتم إضافة نتائج البحث هنا برمجياً -->
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- تفاصيل الصف المحدد -->
            <Border x:Name="ClassDetailsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="📋 تفاصيل الصف المحدد" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,20"/>

                    <!-- بطاقة معلومات الصف -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,25"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- معلومات الصف -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="📚 مستوى التعليم:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     x:Name="EducationLevelText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" 
                                     Text="📅 تاريخ الإنشاء:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" 
                                     x:Name="CreatedDateText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="📝 المعلومات الإضافية:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                     x:Name="AdditionalInfoText"
                                     FontSize="14"
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                     Text="⏳ عمر الصف:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                     x:Name="ClassAgeText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                     Text="🔑 معرف الصف:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" 
                                     x:Name="ClassIDText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                     Text="📊 مراحل العملية:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                     x:Name="ProcessStagesText"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#F44336"
                                     Margin="0,0,0,10"/>
                        </Grid>
                    </Border>

                    <!-- تحذير الحذف -->
                    <Border Background="#FFEBEE" 
                            CornerRadius="10" 
                            Padding="25" 
                            Margin="0,0,0,30"
                            BorderBrush="#F44336"
                            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="تحذير هام!" 
                                         FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>

                            <TextBlock Text="عملية حذف الصف الدراسي هي عملية لا يمكن التراجع عنها." 
                                     FontSize="14" FontWeight="Bold" Foreground="#F44336"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="سيتم حذف جميع بيانات الصف بشكل نهائي من قاعدة البيانات، بما في ذلك:" 
                                     FontSize="14"
                                     Margin="0,0,0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="بيانات الصف الأساسية" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="الشعب المرتبطة بهذا الصف (إن وجدت)" 
                                         FontSize="14"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="15,5,0,0">
                                <TextBlock Text="•" Margin="0,0,10,0" Foreground="#F44336"/>
                                <TextBlock Text="جميع السجلات المرتبطة بهذا الصف" 
                                         FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="يرجى التأكد من اختيار الصف الصحيح قبل المتابعة." 
                                     FontSize="14" FontWeight="Bold"
                                     Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="DeleteButton"
                              Content="🗑️ تأكيد الحذف"
                              Width="200"
                              Height="45"
                              Background="#F44336"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="0,0,15,0"
                              Click="DeleteButton_Click"/>

                        <Button x:Name="CancelDeleteButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Height="45"
                              Background="#757575"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Click="CancelDeleteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- إحصائيات -->
            <Border Background="#F8F9FA" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📊 إحصائيات الصفوف" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="🏫" FontSize="24"/>
                            <TextBlock Text="إجمالي الصفوف" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="TotalClassesText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#2C3E2F"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="📚" FontSize="24"/>
                            <TextBlock Text="الصفوف هذا الشهر" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="ThisMonthClassesText" 
                                     Text="0" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="📅" FontSize="24"/>
                            <TextBlock Text="أقدم صف" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="OldestClassText" 
                                     Text="-" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="#FF9800"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="✨" FontSize="24"/>
                            <TextBlock Text="أحدث صف" 
                                     FontSize="12" Foreground="#5A6D5E"/>
                            <TextBlock x:Name="NewestClassText" 
                                     Text="-" 
                                     FontSize="16" FontWeight="Bold"
                                     Foreground="#2196F3"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- تذييل الصفحة -->
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0"
                    Margin="0,10,0,0"
                    Padding="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📝 إجراءات الحذف:" 
                             FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="1." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="البحث عن الصف باستخدام مستوى التعليم أو المعلومات الإضافية" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="2." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تحديد الصف من قائمة النتائج" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="3." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="مراجعة تفاصيل الصف بعناية" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="4." Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="تأكيد الحذف بعد قراءة التحذيرات" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="⚠️" Margin="0,0,10,0" Foreground="#F44336"/>
                        <TextBlock Text="يجب على الأدمن فقط القيام بهذه العملية" 
                                 FontSize="12" FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>