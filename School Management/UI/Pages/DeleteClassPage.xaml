<UserControl x:Class="School_Management.UI.Pages.DeleteClassPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- أنماط مشابهة للواجهات السابقة -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#F44336"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#F5F5F5"
                                CornerRadius="8"
                                BorderBrush="#D1D1D1"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">

            <!-- عنوان الصفحة -->
            <Border Background="#FFEBEE" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🗑️" FontSize="28" Margin="0,0,10,0"/>
                        <TextBlock Text="حذف صف" 
                                 FontSize="24" FontWeight="Bold" Foreground="#F44336"/>
                    </StackPanel>

                    <TextBlock Text="ابحث عن الصف المراد حذفه ثم قم بتأكيد العملية" 
                             FontSize="14" Foreground="#F44336"
                             HorizontalAlignment="Center"
                             FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- حقل البحث عن الصف -->
            <Border Background="White" CornerRadius="10" Padding="30" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🔍 البحث عن الصف للحذف" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SearchTextBox"
                               Height="45"
                               FontSize="14"
                               Padding="12"
                               BorderBrush="#D1D1D1"
                               BorderThickness="1"
                               VerticalContentAlignment="Center"
                               />

                        <Button x:Name="SearchButton"
                              Grid.Column="1"
                              Content="🔍 بحث"
                              Width="120"
                              Height="45"
                              Background="#93BFC7"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              BorderThickness="0"
                              Margin="-1,0,0,0"/>
                    </Grid>

                    <TextBlock Text="يمكنك البحث باستخدام: المرحلة التعليمية أو معرف الصف" 
                             FontSize="11"
                             Foreground="#6C757D"
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- نتائج البحث -->
            <Border x:Name="SearchResultsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="🏫 نتائج البحث" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,15"/>

                    <ListView x:Name="SearchResultsListView"
                            Height="200"
                            BorderBrush="#D1D1D1"
                            BorderThickness="1"
                            SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="المعرف" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="المرحلة" Width="150" DisplayMemberBinding="{Binding EducationLevel}"/>
                                <GridViewColumn Header="الحد الأقصى" Width="100" DisplayMemberBinding="{Binding MaxStudents, StringFormat={}{0} طالب}"/>
                                <GridViewColumn Header="تاريخ الإنشاء" Width="120" DisplayMemberBinding="{Binding CreatedDate, StringFormat=yyyy/MM/dd}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Button x:Name="SelectClassButton"
                          Content="✓ تحديد الصف للحذف"
                          Width="200"
                          Height="40"
                          Background="#FFEBEE"
                          Foreground="#F44336"
                          FontSize="14"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"
                          Visibility="Collapsed"/>
                </StackPanel>
            </Border>

            <!-- تفاصيل الصف المحدد -->
            <Border x:Name="ClassDetailsBorder"
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="📋 تفاصيل الصف المحدد" 
                             FontSize="18" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,20"/>

                    <!-- بطاقة معلومات الصف -->
                    <Border Background="#FFF3E0" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- معلومات الصف -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                     Text="🏫 المرحلة:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     x:Name="EducationLevelText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                     Text="👥 العدد الأقصى:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                     x:Name="MaxStudentsText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                     Text="📅 تاريخ الإنشاء:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                     x:Name="CreatedDateText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                     Text="📝 معلومات إضافية:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                     x:Name="AdditionalInfoText"
                                     FontSize="14"
                                     Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                     Text="🔒 المعرف:" 
                                     FontSize="14" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                     x:Name="GuidText"
                                     FontSize="12"
                                     Foreground="#6C757D"
                                     Margin="0,0,0,10"/>
                        </Grid>
                    </Border>

                    <!-- تحذير الحذف -->
                    <Border Background="#FFEBEE" 
                            CornerRadius="10" 
                            Padding="20" 
                            Margin="0,0,0,30"
                            BorderBrush="#F44336"
                            BorderThickness="2">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <TextBlock Text="⚠️" FontSize="24" Margin="0,0,10,0"/>
                                <TextBlock Text="تحذير هام!" 
                                         FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                            </StackPanel>

                            <TextBlock Text="عملية حذف الصف هي عملية لا يمكن التراجع عنها." 
                                     FontSize="14" FontWeight="Bold" Foreground="#F44336"
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="سيتم حذف جميع بيانات الصف بشكل نهائي من قاعدة البيانات." 
                                     FontSize="14"
                                     Margin="0,0,0,5"/>

                            <TextBlock Text="ملاحظة: إذا كان الصف يحتوي على شعب مرتبطة به، يجب حذف الشعب أولاً." 
                                     FontSize="14" FontWeight="Bold" Foreground="#F44336"
                                     Margin="0,10,0,5"/>

                            <TextBlock Text="يرجى التأكد من اختيار الصف الصحيح قبل المتابعة." 
                                     FontSize="14" FontWeight="Bold"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- أزرار التحكم -->
                    <StackPanel Orientation="Horizontal"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,10">
                        <Button x:Name="DeleteButton"
                              Content="🗑️ تأكيد الحذف"
                              Width="200"
                              Style="{StaticResource DangerButtonStyle}"
                              Margin="0,0,15,0"/>

                        <Button x:Name="CancelDeleteButton"
                              Content="❌ إلغاء"
                              Width="150"
                              Style="{StaticResource CancelButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- تذييل الصفحة -->
            <Border BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0"
                    Margin="0,30,0,0"
                    Padding="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="📋 ملاحظات هامة:" 
                             FontSize="14" FontWeight="Bold" Foreground="#2C3E2F"
                             Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                        <TextBlock Text="عملية حذف الصف نهائية ولا يمكن التراجع عنها" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                        <TextBlock Text="يجب التأكد من اختيار الصف الصحيح قبل تأكيد الحذف" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="•" Margin="0,0,10,0" Foreground="#93BFC7"/>
                        <TextBlock Text="يجب حذف جميع الشعب المرتبطة بالصف قبل حذف الصف" 
                                 FontSize="12" Foreground="#5A6D5E"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>