<Window x:Class="School_Management.Control.CreateDataBaseUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="إنشاء قاعدة بيانات SQL" 
        Height="600" 
        Width="650"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="إنشاء قاعدة بيانات جديدة" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="#1976D2"/>
            <TextBlock Text="اختر السيرفر وأدخل بيانات الاتصال" 
                       FontSize="14"
                       Foreground="#757575"/>
        </StackPanel>

        <!-- زر البحث -->
        <Button x:Name="btnFind" 
                Grid.Row="0"
                Content="🔍 البحث عن السيرفرات" 
                Click="btnFind_Click"
                Padding="10,6"
                FontWeight="Bold"
                FontSize="13"
                Background="#2196F3"
                Foreground="White"
                BorderBrush="#0D47A1"
                Cursor="Hand"
                HorizontalAlignment="Right"/>

        <!-- حالة البحث -->
        <TextBlock x:Name="txtStatus" 
                   Grid.Row="0"
                   Margin="0,30,0,0"
                   Foreground="#1976D2"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>

        <!-- قائمة السيرفرات -->
        <Border Grid.Row="2" 
                BorderBrush="#BDBDBD" 
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,5,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#F5F5F5" 
                        BorderBrush="#BDBDBD"
                        BorderThickness="0,0,0,1"
                        Padding="10">
                    <TextBlock Text="السيرفرات المتاحة:" 
                               FontWeight="Bold"/>
                </Border>

                <ListBox x:Name="lstServers" 
                         Grid.Row="1"
                         SelectionChanged="lstServers_SelectionChanged"
                         BorderThickness="0"
                         FontSize="14"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="🖥️" 
                                           Margin="0,0,10,0"
                                           FontSize="16"/>
                                <TextBlock Text="{Binding}" 
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Margin" Value="2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>

        <!-- بيانات الاتصال -->
        <Border Grid.Row="3" 
                Margin="0,15,0,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="14.446"/>
                    <ColumnDefinition Width="135.554"/>
                    <ColumnDefinition Width="85*"/>
                    <ColumnDefinition Width="353*"/>
                </Grid.ColumnDefinitions>

                <!-- عنوان قسم بيانات الاتصال -->
                <TextBlock Grid.Row="0" 
                           Grid.ColumnSpan="4"
                           Text="بيانات الاتصال:" 
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#1976D2"
                           Margin="0,0,0,15"/>

                <!-- اسم قاعدة البيانات -->
                <TextBlock Grid.Row="1" 
                           Grid.Column="0"
                           Text="اسم قاعدة البيانات:"
                           VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txtDatabaseName" 
                         Grid.Row="1" 
                         Grid.Column="2"
                         FontSize="14"
                         Margin="0,8,0,0"
                         Padding="10"
                         Text="SchoolDB" Grid.ColumnSpan="2"/>

                <!-- اسم المستخدم -->
                <TextBlock Grid.Row="2" 
                           Grid.Column="0"
                           Text="اسم المستخدم:"
                           VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBox x:Name="txtUsername" 
                         Grid.Row="2" 
                         Grid.Column="2"
                         FontSize="14"
                         Margin="0,8,0,0"
                         Padding="10"
                         Text="sa" Grid.ColumnSpan="2"/>

                <!-- كلمة المرور -->
                <TextBlock Grid.Row="3" 
                           Grid.Column="0"
                           Text="كلمة المرور:"
                           VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <PasswordBox x:Name="txtPassword" 
                             Grid.Row="3" 
                             Grid.Column="2"
                             FontSize="14"
                             Margin="0,8,0,0"
                             Padding="10" Grid.ColumnSpan="2"/>
            </Grid>
        </Border>

        <!-- أزرار الإجراءات -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="0,15,0,0"
                    HorizontalAlignment="Right">
            <Button x:Name="btnTest" 
                    Content="🔍 اختبار الاتصال" 
                    Click="btnTest_Click"
                    Padding="15,8"
                    FontWeight="Bold"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="#388E3C"
                    Cursor="Hand"
                    IsEnabled="False"/>

            <Button x:Name="btnCreate" 
                    Content="➕ إنشاء قاعدة البيانات" 
                    Click="btnCreate_Click"
                    Padding="15,8"
                    Margin="10,0,0,0"
                    FontWeight="Bold"
                    FontSize="14"
                    Background="#9C27B0"
                    Foreground="White"
                    BorderBrush="#7B1FA2"
                    Cursor="Hand"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- نتيجة الاختبار/الإنشاء -->
        <Border x:Name="resultPanel"
                Grid.Row="5"
                Margin="0,15,0,0"
                Background="#F5F5F5"
                BorderBrush="#BDBDBD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="resultIcon" 
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="24"
                           Margin="0,0,10,0"/>

                <TextBlock x:Name="txtResult" 
                           Grid.Row="0"
                           Grid.Column="1"
                           FontWeight="Bold"
                           FontSize="14"/>

                <TextBlock x:Name="txtDetails" 
                           Grid.Row="1"
                           Grid.Column="1"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- أزرار إضافية -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    Margin="0,15,0,0">
            <Button x:Name="btnCopy" 
                    Content="📋 نسخ معلومات الاتصال" 
                    Click="btnCopy_Click"
                    Padding="10,6"
                    FontSize="13"
                    Background="#FF9800"
                    Foreground="White"
                    BorderBrush="#F57C00"
                    Cursor="Hand"
                    IsEnabled="False"/>

            <Button x:Name="btnClear" 
                    Content="🗑️ مسح الحقول" 
                    Click="btnClear_Click"
                    Padding="10,6"
                    Margin="10,0,0,0"
                    FontSize="13"
                    Background="#F5F5F5"
                    Foreground="#757575"
                    BorderBrush="#E0E0E0"/>

            <Button x:Name="btnClose" 
                    Content="إغلاق" 
                    Click="btnClose_Click"
                    Padding="10,6"
                    Margin="10,0,0,0"
                    FontSize="13"
                    FontWeight="Bold"
                    Background="#F5F5F5"
                    Foreground="#757575"
                    BorderBrush="#E0E0E0"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>