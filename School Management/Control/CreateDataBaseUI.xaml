<Window x:Class="School_Management.Control.CreateDataBaseUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="سيرفرات SQL المتاحة" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- زر البحث -->
        <Button x:Name="btnFind" 
                Content="🔍 البحث عن السيرفرات" 
                Click="btnFind_Click"
                Padding="15,8"
                FontWeight="Bold"
                FontSize="14"
                Background="#2196F3"
                Foreground="White"
                BorderBrush="#0D47A1"
                Cursor="Hand"/>

        <!-- حالة البحث -->
        <TextBlock x:Name="txtStatus" 
                   Grid.Row="0"
                   Margin="0,0,0,0"
                   Foreground="#1976D2"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"/>

        <!-- قائمة السيرفرات -->
        <Border Grid.Row="2" 
                BorderBrush="#BDBDBD" 
                BorderThickness="1"
                CornerRadius="5">
            <ListBox x:Name="lstServers" 
                     SelectionChanged="lstServers_SelectionChanged"
                     BorderThickness="0"
                     FontSize="14"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="🖥️" 
                                       Margin="0,0,10,0"
                                       FontSize="16"/>
                            <TextBlock Text="{Binding}" 
                                       FontWeight="SemiBold"
                                       Foreground="#212121"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Margin" Value="2"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <!-- السيرفر المحدد -->
        <Border Grid.Row="3" 
                Margin="0,10,0,0"
                Background="#F5F5F5"
                CornerRadius="5"
                Padding="10">
            <StackPanel>
                <TextBlock Text="السيرفر المحدد:" 
                           FontWeight="Bold"
                           Foreground="#616161"/>
                <TextBlock x:Name="txtSelectedServer" 
                           Text="لم يتم اختيار أي سيرفر"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#1976D2"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- أزرار الإجراءات -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="0,15,0,0"
                    HorizontalAlignment="Right">
            <Button x:Name="btnTest" 
                    Content="✅ اختبار الاتصال" 
                    Click="btnTest_Click"
                    Padding="15,8"
                    FontWeight="Bold"
                    FontSize="14"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="#388E3C"
                    Cursor="Hand"
                    IsEnabled="False"/>

            <Button x:Name="btnCopy" 
                    Content="📋 نسخ الاسم" 
                    Click="btnCopy_Click"
                    Padding="15,8"
                    Margin="10,0,0,0"
                    FontWeight="Bold"
                    FontSize="14"
                    Background="#FF9800"
                    Foreground="White"
                    BorderBrush="#F57C00"
                    Cursor="Hand"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- نتيجة الاختبار -->
        <Border x:Name="testResultPanel"
                Grid.Row="5"
                Margin="0,15,0,0"
                Background="#E8F5E8"
                BorderBrush="#C8E6C9"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="txtTestResult" 
                           FontWeight="Bold"
                           FontSize="14"/>
                <TextBlock x:Name="txtTestDetails" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- زر الإغلاق -->
        <Button Grid.Row="5"
                x:Name="btnClose" 
                Content="إغلاق" 
                Click="btnClose_Click"
                Padding="15,8"
                Margin="0,15,0,0"
                HorizontalAlignment="Left"
                FontWeight="Bold"
                FontSize="14"
                Width="100"
                Background="#F5F5F5"
                Foreground="#757575"
                BorderBrush="#E0E0E0"/>
    </Grid>
</Window>